/* pages/dialog.wxss */
.page {
  width: 100%;
  min-height: 100vh;
  background-color: #061429;
}

.container {
  position: relative;
  width: 100%;
  height: 100vh;
}

/* 毛玻璃效果遮罩层 */
.frosted-glass {
  position: fixed;
  /* 顶部位置留出导航栏高度 */
  top: 128rpx; /* 导航栏基础高度 + 状态栏高度 */
  left: 0;
  right: 0;
  /* 底部位置留出 tabbar 高度 */
  bottom: calc(110rpx + env(safe-area-inset-bottom)); /* tabbar 高度 + 底部安全区域 */
  background-color: rgba(255, 255, 255, 0);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  z-index: 100;
  pointer-events: none; /* 确保不会影响底层组件的交互 */
}
