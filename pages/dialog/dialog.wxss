@import "/static/css/iconfont.wxss";

/* 对话组件容器 */
.dialog-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 1000;
  transform: translateY(100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.dialog-container.visible {
  transform: translateY(0);
  opacity: 1;
}

/* pages/dialog.wxss */
.page {
  width: 100%;
  min-height: 100vh;
  background-color:rgba(6, 20, 41, 0.56); /* 背景改为半透明 */
  --dialog-opacity: 1; /* CSS变量控制透明度 */
  display: flex;
  flex-direction: column;
}

/* 长按时的透明度控制 */
.page.peek-soup {
  --dialog-opacity: 0;
  background-color: rgba(6, 20, 41, 0); /* 背景完全透明 */
}

/* 关闭按钮 */
.close-button {
  position: fixed;
  top: 40rpx;
  right: 40rpx;
  width: 60rpx;
  height: 60rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1001;
}

.close-button .icon-close {
  font-size: 40rpx;
  color: #ffffff;
}

/* 容器样式 */
.container {
  flex: 1;
  position: relative;
  padding-top: 180rpx; /* 调整顶部padding以适应导航栏 */
  padding-bottom: 150rpx;
}

/* 毛玻璃效果遮罩层 */
.frosted-glass {
  position: fixed;
  top: 180rpx; /* 导航栏基础高度 + 状态栏高度 */
  left: 0;
  right: 0;
  bottom: 150rpx;
  background-color: rgba(255, 255, 255, 0);
  backdrop-filter: blur(15rpx);
  -webkit-backdrop-filter: blur(15rpx);
  z-index: 100;
  pointer-events: none; /* 确保不会影响底层组件的交互 */
  opacity: var(--dialog-opacity);
  transition: opacity 0.5s ease, backdrop-filter 0.5s ease;
}

/* 对话区域样式 */
.dialog-area-component {
  opacity: var(--dialog-opacity);
  transition: opacity 0.5s ease;
} 