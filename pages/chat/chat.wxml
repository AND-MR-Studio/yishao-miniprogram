<!--pages/chat/chat.wxml - 海龟汤聊天页面-->
<view class="page" bindlongpress="onLongPressStart" bindtouchend="onLongPressEnd" bindtouchcancel="onLongPressEnd">  <!-- 导航栏 -->  <nav-bar
    pageState="{{'drinking'}}"
    bind:close="onDialogClose"
    showBackButton="{{true}}"
  />

  <view class="container">
    <!-- 汤面显示区域 - 用于偷看功能 -->
    <view class="soup-display-wrapper">
      <soup-display
        id="soupDisplay"
        soupData="{{soupData}}"
        isDrinking="{{true}}"
        isPeeking="{{isPeeking}}"
        class="soup-display-component {{isPeeking ? 'peeking' : ''}}"
        bind:longPressStart="onLongPressStart"
        bind:longPressEnd="onLongPressEnd"
      ></soup-display>
    </view>

    <!-- 汤底显示区域 -->
    <soup-truth
      id="soupTruth"
      soupId="{{soupId}}"
      wx:if="{{chatState === 'truth'}}"
    ></soup-truth>
  </view>
  <!-- 对话组件 -->
  <dialog-component
    id="dialog"
    mode="single"
    messages="{{chatStore.messages}}"
    isPeeking="{{isPeeking}}"
    loading="{{chatState === 'loading'}}"
    enableTypeAnimation="{{true}}"
    bind:close="onDialogClose"
  ></dialog-component>
  <!-- 输入栏组件 -->
  <input-bar
    id="inputBar"
    inputValue="{{inputValue}}"
    disabled="{{chatState === 'loading'}}"
    sending="{{chatState === 'loading'}}"
    showTestButton="{{true}}"
    bind:input="handleInputChange"
    bind:send="handleSend"
    bind:clear="handleInputClear"
    bind:voiceStart="handleVoiceStart"
    bind:voiceEnd="handleVoiceEnd"
    bind:voiceCancel="handleVoiceCancel"
  />

  <!-- 提示模块组件 -->
  <tip-box
    bind:visibleChange="onTipVisibleChange"
  ></tip-box>

  <!-- 新用户引导层组件 -->
  <guide-overlay
    show="{{showGuide}}"
    bind:close="onCloseGuide">
  </guide-overlay>
</view>