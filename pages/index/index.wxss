/**
 * 首页样式 - 海龟汤展示与交互
 */
@import "../../styles/animation.wxss";

/* 页面基础样式 */
.page {
  width: 100%;
  min-height: 100vh;
  background-color: #020814; /* 更深的蓝黑色背景 */
  position: fixed;
  overflow: hidden; /* 防止渐变光晕溢出 */
  background-image: linear-gradient(to bottom, #030a1c 0%, #020814 100%); /* 增加垂直渐变 */
}

/* 弥散光渐变背景 - 统一的绿紫品牌色调 */
.page {
  --default-gradient: radial-gradient(ellipse at 20% 30%, rgba(87, 44, 239, 0.5) 0%, rgba(25, 0, 112, 0.3) 30%, transparent 70%),
                     radial-gradient(ellipse at 80% 85%, rgba(0, 30, 255, 0.3) 0%, rgba(0, 10, 80, 0.2) 40%, transparent 70%),
                     radial-gradient(ellipse at 50% 50%, rgba(87, 44, 239, 0.2) 0%, rgba(50, 0, 120, 0.1) 30%, transparent 60%),
                     /* 适度增强绿色品牌色 */
                     radial-gradient(ellipse at 65% 20%, rgba(92, 232, 33, 0.25) 0%, rgba(0, 180, 90, 0.15) 30%, transparent 60%),
                     radial-gradient(ellipse at 40% 60%, rgba(92, 232, 33, 0.2) 0%, rgba(0, 150, 75, 0.1) 40%, transparent 70%),
                     radial-gradient(circle at 30% 75%, rgba(92, 232, 33, 0.2) 0%, rgba(0, 100, 50, 0.1) 40%, transparent 70%);
  --dynamic-gradient: var(--default-gradient);
}

.page::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: var(--dynamic-gradient);
  filter: blur(90px); /* 增大模糊半径，使光晕更加柔和且混合 */
  z-index: 1;
  opacity: 0.85; /* 适度调整不透明度，保持高级感 */
  transition: background 0.25s ease-out;
  mix-blend-mode: lighten; /* 使用lighten混合模式，保持高级感 */
}

/* 磨砂质感叠加层 */
.page::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: url('data:imae/png;base64,');
  opacity: 0.05;
  z-index: 2;
  pointer-events: none;
}

/* 容器样式 - 确保覆盖整个页面并正确处理触摸事件 */
.container {
  width: 100%;
  min-height: 100vh;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  touch-action: pan-x pan-y; /* 允许滑动手势 */
  z-index: 5; /* 确保内容在渐变背景之上 */
}

/* 汤面显示区域在对话层后面时的样式 */
.behind-dialog {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10; /* 低于对话组件的z-index */
  opacity: 0.05;
  transition: opacity 0.6s var(--transition-decelerated), z-index 0s;
  pointer-events: none; /* 防止点击穿透 */
}

/* 偷看功能样式 */
.behind-dialog.peeking {
  z-index: 1001; /* 高于对话组件的z-index */
  opacity: 1;
  transition: opacity 0.6s var(--transition-decelerated), z-index 0s;
  pointer-events: none; /* 确保不会影响底层组件的交互 */
  animation: blurToClear 0.6s var(--transition-decelerated); /* 添加模糊到清晰的动画 */
}

/* 按钮容器样式 */
.button-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 0;
  position: fixed;
  gap: 27rpx;
  width: 100%;
  bottom: calc(200rpx + env(safe-area-inset-bottom) + 60rpx); /* tabbar高度 + 安全区域 + 间距 */
  left: 0;
  z-index: 998;
}

/* 按钮宽度设置 */
.button-container .btn-light,
.button-container .btn-unlight {
  width: 50% !important;
  min-width: 300rpx !important;
}

/* 滑动提示样式 */
.swipe-hint {
  position: fixed;
  bottom: calc(60rpx + env(safe-area-inset-bottom));
  left: 0;
  width: 100%;
  text-align: center;
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
  padding: 20rpx 0;
  opacity: 0;
  transform: translateY(20rpx);
  transition: opacity 0.3s ease, transform 0.3s ease;
  z-index: 997;
}

/* 滑动过程中的背景渐变效果 - 根据滑动距离动态计算 */
.page.swiping::before {
  transition: background 0.15s cubic-bezier(0.4, 0, 0.2, 1); /* 使用更平滑的过渡曲线 */
  animation: subtle-glow 3s infinite alternate; /* 添加微妙的光晕命中动画 */
}

/* 微妙的光晕命中动画 */
@keyframes subtle-glow {
  0% { opacity: 0.82; }
  100% { opacity: 0.88; }
}

.swipe-hint.show-hint {
  opacity: 1;
  transform: translateY(0);
}

/* 汤面显示包装器 */
.soup-display-wrapper {
  width: 100%;
  height: auto;
  top: 60rpx;
  position: relative;
  display: block;
}