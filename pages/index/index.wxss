/**
 * 首页样式 - 海龟汤展示与交互
 */
@import "../../styles/animation.wxss";

/* 页面基础样式 */
.page {
  width: 100%;
  min-height: 100vh;
  background-color: #061429;
  position: relative;
}

/* 容器样式 - 确保覆盖整个页面并正确处理触摸事件 */
.container {
  width: 100%;
  min-height: 100vh;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  touch-action: pan-x pan-y; /* 允许滑动手势 */
}

/* 汤面显示区域在对话层后面时的样式 */
.behind-dialog {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10; /* 低于对话组件的z-index */
  opacity: 0.3;
  transition: opacity 0.3s ease;
  pointer-events: none; /* 防止点击穿透 */
}

/* 偷看状态样式 - 当用户长按对话区域时显示汤面 */
.soup-display-component.is-peeking {
  z-index: 1001 !important; /* 确保在最上层 */
  opacity: 1 !important;
  pointer-events: auto !important; /* 允许交互 */
}

/* 按钮容器样式 */
.button-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 0;
  position: fixed;
  gap: 27rpx;
  width: 100%;
  bottom: calc(200rpx + env(safe-area-inset-bottom) + 60rpx); /* tabbar高度 + 安全区域 + 间距 */
  left: 0;
  z-index: 998;
}

/* 按钮宽度设置 */
.button-container .btn-light,
.button-container .btn-unlight {
  width: 50% !important;
  min-width: 300rpx !important;
}

/* 滑动提示样式 */
.swipe-hint {
  position: fixed;
  bottom: calc(60rpx + env(safe-area-inset-bottom));
  left: 0;
  width: 100%;
  text-align: center;
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
  padding: 20rpx 0;
  opacity: 0;
  transform: translateY(20rpx);
  transition: opacity 0.3s ease, transform 0.3s ease;
  z-index: 997;
}

.swipe-hint.show-hint {
  opacity: 1;
  transform: translateY(0);
}

/* 汤面显示包装器 */
.soup-display-wrapper {
  width: 100%;
  height: auto;
  position: relative;
  display: block;
}