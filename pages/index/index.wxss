/* pages/index.wxss */
@import "../../styles/animation.wxss";

.page {
  width: 100%;
  min-height: 100vh;
  background-color: #061429;
  position: relative; /* 确保定位正确 */
}

/* 汤面显示区域在对话层后面时的样式 */
.behind-dialog {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10; /* 较低的z-index，保证在dialog组件下方 */
  opacity: 0.3; /* 默认半透明 */
  transition: opacity 0.3s ease;
  pointer-events: none; /* 防止穿透 */
}

/* 当对话组件处于偷看状态时，汤面显示区域需要提升z-index和透明度 */
.soup-display-component.is-peeking {
  z-index: 1001 !important; /* 确保在偷看时显示在最上层 */
  opacity: 1 !important; /* 完全不透明 */
  pointer-events: auto !important; /* 允许交互 */
}

/* 按钮容器样式 */
.button-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 0rpx;
  position: fixed;
  gap: 27rpx;
  width: 100%;
  align-self: stretch;
  order: 2;
  flex-grow: 0;
  bottom: calc(110rpx + env(safe-area-inset-bottom) + 60rpx); /* tabbar高度 + 安全区域 + 间距 */
  left: 0;
  z-index: 998;
}

/* 强制主页按钮宽度 */
.button-container .btn-light,
.button-container .btn-unlight {
  width: 50% !important;
  min-width: 300rpx !important;
}


/* 输入栏样式 */
.input-bar {
  position: fixed;
  bottom: calc(env(safe-area-inset-bottom));
  left: 0;
  width: 100%;
  z-index: 1002; /* 确保在汤面显示层之上 */
  background-color: #061429;
  padding: 20rpx;
  box-sizing: border-box;
  pointer-events: auto; /* 确保可以接收事件 */
}