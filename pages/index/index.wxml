<!--pages/index.wxml-->
<view class="page">
  <!-- 导航栏 -->
  <nav-bar 
  />
  
  <view class="container">
    <!-- 汤面显示区域 -->
    <soup-display 
      id="soupDisplay"
      useDefaultOnly="{{soupConfig.useDefaultOnly}}"
      autoPlay="{{soupConfig.autoPlay}}"
      staticMode="{{soupConfig.staticMode}}"
      bind:animationComplete="onSoupAnimationComplete"
    ></soup-display>
    
    <!-- 设置卡片 -->
    <setting-card
      show="{{showSetting}}"
      bind:switchchange="handleSettingChange"
      bind:close="onSettingClose"
    ></setting-card>
    
    <!-- 按钮区域 -->
    <view class="button-container">
      <custom-button 
        type="light" 
        text="开始喝汤" 
        animation="slide-up"
        width="50%"
        height="80rpx"
        bind:tap="onStartSoup" 
        bind:animationend="onStartButtonAnimationEnd"
        show="{{showStartButton}}" 
        delay="0.3">
      </custom-button>
      <custom-button 
        type="unlight" 
        text="下一个" 
        animation="slide-up"
        width="50%"
        height="80rpx"
        bind:tap="onNextSoup" 
        show="{{showNextButton}}" 
        delay="0.3">
      </custom-button>
    </view>
  </view>
</view>