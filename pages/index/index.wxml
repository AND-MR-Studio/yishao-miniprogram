<!--pages/index.wxml - 海龟汤首页-->
<view class="page">
  <!-- 导航栏 -->
  <nav-bar
    bind:settingchange="handleSettingChange"
    bind:close="onSettingClose"
  />

  <view class="container" bindtouchstart="touchStart" bindtouchmove="touchMove" bindtouchend="touchEnd">
    <!-- 汤面显示区域 -->
    <soup-display
      id="soupDisplay"
      soupData="{{currentSoup}}"
      loading="{{isLoading}}"
      isPeeking="{{isPeeking}}"
      staticMode="{{staticMode}}"
      class="soup-display-component {{pageState === 'drinking' ? 'behind-dialog' : ''}} {{pageState === 'drinking' && isPeeking ? 'is-peeking' : ''}} {{swipeFeedback ? 'swipe-feedback-' + swipeDirection : ''}}"
      wx:if="{{pageState === 'viewing' || pageState === 'drinking'}}"
      bind:animationComplete="onAnimationComplete"
    ></soup-display>

    <!-- 汤底显示区域 -->
    <soup-truth
      id="soupTruth"
      soupId="{{truthSoupId || ''}}"
      wx:if="{{pageState === 'truth'}}"
    ></soup-truth>

    <!-- 按钮区域 -->
    <view class="button-container {{showButtons ? 'show-buttons' : ''}}">
      <custom-button
        type="light"
        text="开始喝汤"
        width="50%"
        height="80rpx"
        bind:tap="onStartSoup"
        class="start-button"
        wx:if="{{showButtons}}">
      </custom-button>
    </view>

    <!-- 滑动提示 -->
    <view class="swipe-hint {{showButtons ? 'show-hint' : ''}}" wx:if="{{pageState === 'viewing'}}">
      <text>左右滑动切换汤面</text>
    </view>
  </view>

  <!-- 对话组件 -->
  <dialog-component
    id="dialog"
    visible="{{pageState === 'drinking'}}"
    bind:close="onDialogClose"
    bind:showTruth="onShowTruth"
    bind:peekSoup="onPeekSoup"
  ></dialog-component>

</view>