/* pages/create/create.wxss */
@import "../../styles/animation.wxss";

/* 页面基础样式 */
.page {
  width: 100%;
  min-height: 100vh;
  background-color: var(--color-background);
  position: relative;
  overflow-x: hidden;
}



/* 容器样式 */
.container {
  padding: 30rpx;
  padding-top: 180rpx; /* 为导航栏留出空间 */
}

/* 表单容器 */
.form-container {
  background: rgba(10, 20, 40, 0.5);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

/* 表单项 */
.form-item {
  margin-bottom: 30rpx;
  position: relative;
}

/* 表单标签 */
.form-label {
  font-size: 28rpx;
  color: var(--color-text-secondary);
  margin-bottom: 10rpx;
}

/* 输入框 */
.form-input {
  width: 100%;
  height: 80rpx;
  background: rgba(0, 0, 0, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 10rpx;
  color: var(--color-text-primary);
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 文本域 */
.form-textarea {
  width: 100%;
  min-height: 200rpx;
  background: rgba(0, 0, 0, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 10rpx;
  color: var(--color-text-primary);
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  line-height: 1.5;
}

/* 错误状态的输入框 */
.input-error {
  border-color: var(--color-error);
}

/* 错误文本 */
.error-text {
  color: var(--color-error);
  font-size: 24rpx;
  margin-top: 8rpx;
}

/* 字数统计 */
.char-count {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  font-size: 24rpx;
  color: var(--color-text-hint);
}



/* 标签相关样式 */
.tag-hint {
  font-size: 24rpx;
  color: var(--color-text-hint);
  margin-left: 10rpx;
}

.selected-tags-container {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 24rpx;
  min-height: 100rpx;
  padding: 16rpx;
  background: rgba(0, 0, 0, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  box-shadow: inset 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.no-tags-selected {
  color: var(--color-text-hint);
  font-size: 28rpx;
  width: 100%;
  text-align: center;
  padding: 20rpx 0;
}

.selected-tag {
  display: inline-flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: rgba(87, 44, 239, 0.7);
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
  border: 1px solid rgba(255, 255, 255, 0.3);
  margin: 8rpx;
  transition: all 0.2s ease;
}

.tag-remove {
  margin-left: 12rpx;
  width: 36rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 0.9);
  background: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
}

.tag-remove:active {
  transform: scale(0.9);
  background: rgba(0, 0, 0, 0.5);
}

.tag-pool {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
  padding: 10rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 12rpx;
  justify-content: center;
}

/* 删除不再使用的pool-tag样式 */

/* 标签按钮样式 */
.tag-button {
  margin: 10rpx;
  padding: 0 24rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: rgba(255, 255, 255, 0.1);
  color: #ffffff;
  font-size: 26rpx;
  border-radius: 30rpx;
  border: 1px solid rgba(255, 255, 255, 0.2);
  display: inline-block;
  text-align: center;
  min-width: 120rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.2);
  transition: all 0.2s ease;
}

/* 选中状态 */
.tag-button.selected {
  background: rgba(87, 44, 239, 0.7);
  color: #ffffff;
  border: 1px solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(87, 44, 239, 0.4);
}

/* 点击效果 */
.tag-button:active {
  transform: scale(0.95);
  background: rgba(87, 44, 239, 0.5);
}

/* 表单操作按钮 */
.form-actions {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
  width: 100%;
  padding: 20rpx 0;
}
