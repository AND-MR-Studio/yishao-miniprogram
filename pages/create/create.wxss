/* pages/create/create.wxss */
@import "../../styles/animation.wxss";

/* 页面基础样式 */
.page {
  width: 100%;
  min-height: 100vh;
  background-color: var(--color-background);
  position: relative;
  overflow-x: hidden;
  padding-bottom: 140rpx; /* 增加底部padding，为固定按钮留出空间 */
}

/* 噪点效果 */
.noise-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background-image: url("data:image/png;base64,");
  opacity: 0.05;
  pointer-events: none;
  z-index: 1;
}

/* 容器样式 */
.container {
  padding: 30rpx;
  padding-top: 180rpx; /* 为导航栏留出空间 */
}

/* 表单容器 */
.form-container {
  background: rgba(10, 20, 40, 0.5);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

/* 表单项 */
.form-item {
  margin-bottom: 30rpx;
  position: relative;
}

/* 表单标签 */
.form-label {
  font-size: 28rpx;
  color: var(--color-text-secondary);
  margin-bottom: 10rpx;
}

/* 输入框 */
.form-input {
  width: 100%;
  height: 80rpx;
  background: rgba(0, 0, 0, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 10rpx;
  color: var(--color-text-primary);
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 文本域 */
.form-textarea {
  width: 100%;
  min-height: 200rpx;
  background: rgba(0, 0, 0, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 10rpx;
  color: var(--color-text-primary);
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  line-height: 1.5;
}

/* 错误状态的输入框 */
.input-error {
  border-color: var(--color-error);
}

/* 错误文本 */
.error-text {
  color: var(--color-error);
  font-size: 24rpx;
  margin-top: 8rpx;
}

/* 字数统计 */
.char-count {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  font-size: 24rpx;
  color: var(--color-text-hint);
}



/* 表单操作按钮 */
.form-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 50rpx;
}

/* 底部固定按钮 */
.fixed-bottom-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: rgba(6, 20, 41, 0.9);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  z-index: 100;
  box-shadow: 0 -4rpx 10rpx rgba(0, 0, 0, 0.2);
}
