<!--index.wxml-->
<view class="page">
  <!-- 导航栏 -->
  <nav-bar />
  
  <view class="container">
    <!-- 气泡容器 -->
    <view class="bubbles-container">
      <bubble wx:for="{{bubbles}}" 
              wx:key="id"
              index="{{index}}"
              left="{{item.left}}"
              top="{{item.top}}"
              bubbleText="{{item.text}}"
              existingPositions="{{existingPositions}}"
              bind:bubbleinit="onBubbleInit"
              bind:bubblemove="onBubbleMove"
              bind:bubblerelease="onBubbleRelease">
      </bubble>
    </view>
    
    <!-- 底部动画图片 -->
    <view class="bottom-animation">
      <view class="swing-container">
        <view class="jelly-container {{isJelly ? 'jelly-effect' : ''}}">
          <image 
            class="question-pot"
            src="https://i.postimg.cc/gJfhN0zw/xiaoshao.gif" 
            mode="aspectFit"
            bindtap="onPotTap"
            catch:touchstart="onPotTap"></image>
        </view>
      </view>
    </view>
  </view>
</view>