/* pages/mine/mine.wxss */
@import "../../styles/theme.wxss";
@import "../../styles/animation.wxss";

.page {
  width: 100%;
  min-height: 100vh;
  background-color: var(--color-background);
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.container {
  flex: 1;
  width: 100%;
  box-sizing: border-box;
  /* 顶部位置留出导航栏高度 */
  padding: calc(180rpx + env(safe-area-inset-top)) 30rpx calc(110rpx + env(safe-area-inset-bottom)) 30rpx;
  /* 底部留出 tabbar 高度 */
  position: relative;
  overflow-y: auto;
}

/* 用户信息卡片样式 */
.user-card {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  background-color: var(--color-background-light);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  margin-bottom: 40rpx;
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-sizing: border-box;
  width: 100%;
}

.avatar-container {
  margin-right: 30rpx;
}

/* 头像按钮样式 */
.avatar-wrapper {
  background: none !important;
  padding: 0 !important;
  width: 120rpx !important;
  height: 120rpx !important;
  border-radius: 50% !important;
  border: none !important;
  line-height: 1 !important;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2px solid var(--color-primary);
  box-shadow: var(--glow-primary);
}

.user-info {
  flex: 1;
}

.username {
  font-size: var(--font-size-lg);
  color: var(--color-text-primary);
  font-weight: var(--font-weight-medium);
  margin-bottom: 16rpx;
  display: block;
}

.answer-count {
  display: flex;
  align-items: center;
}

.count-label {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
}

.count-value {
  font-size: var(--font-size-md);
  color: var(--color-primary);
  font-weight: var(--font-weight-bold);
}

/* 功能列表样式 */
.function-list {
  background-color: var(--color-background-light);
  border-radius: var(--radius-lg);
  overflow: hidden;
  margin-bottom: 60rpx;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.function-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  position: relative;
}

.function-item:not(:last-child)::after {
  content: '';
  position: absolute;
  left: 30rpx;
  right: 30rpx;
  bottom: 0;
  height: 1px;
  background-color: rgba(255, 255, 255, 0.1);
}

.item-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  color: var(--color-primary);
}

.item-content {
  flex: 1;
  font-size: var(--font-size-md);
  color: var(--color-text-primary);
}

.item-arrow {
  color: var(--color-text-hint);
  font-size: var(--font-size-sm);
}

/* 退出登录按钮容器样式 */
.logout-container {
  padding: 20rpx 40rpx;
  margin-top: 80rpx;
}