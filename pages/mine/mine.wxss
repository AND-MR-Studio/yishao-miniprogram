/* pages/mine/mine.wxss */
@import "../../styles/theme.wxss";
@import "../../styles/animation.wxss";

.page {
  width: 100%;
  height: 100vh;
  background-color: var(--color-background);
  background-image: linear-gradient(135deg, rgba(6, 20, 41, 0.95) 0%, rgba(20, 10, 40, 0.95) 100%);
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  position: relative;
  padding: 0;
  margin: 0;
}

.page::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 30% 20%, rgba(92, 232, 33, 0.1) 0%, transparent 50%),
              radial-gradient(circle at 70% 60%, rgba(128, 0, 255, 0.1) 0%, transparent 50%);
  z-index: 0;
}

.container {
  flex: 1;
  width: 100%;
  box-sizing: border-box;
  /* 顶部位置留出导航栏高度 */
  padding: calc(200rpx + env(safe-area-inset-top)) 20rpx calc(110rpx + env(safe-area-inset-bottom)) 20rpx;
  /* 底部留出 tabbar 高度 */
  position: relative;
  display: flex;
  flex-direction: column;
  z-index: 1;
  gap: 30rpx; /* 各板块之间的间距 */
  overflow-x: hidden;
}

/* 四栏数据样式 */
.stats-section {
  display: flex;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  padding: 30rpx 0;
  width: 100%;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 20rpx 0;
  transition: all 0.3s ease;
}

.stat-item:active {
  background-color: rgba(92, 232, 33, 0.1);
}

.stat-item:not(:last-child):after {
  content: '';
  position: absolute;
  right: 0;
  top: 20%;
  height: 60%;
  width: 1px;
  background-color: rgba(255, 255, 255, 0.1);
}

.stat-value {
  font-size: 38rpx;
  color: var(--color-primary);
  font-weight: bold;
  margin-bottom: 12rpx;
  text-shadow: 0 0 10rpx rgba(92, 232, 33, 0.5);
}

.stat-label {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  letter-spacing: 1px;
}

/* 更新日志Banner轮播样式 */
.banner-swiper {
  width: 100%;
  height: 200rpx;
  margin-bottom: 30rpx;
  border-radius: var(--radius-lg);
  overflow: hidden;
}

.update-banner {
  width: 100%;
  height: 200rpx;
  background-color: rgba(128, 0, 255, 0.7);
  border-radius: var(--radius-lg);
  overflow: hidden;
  position: relative;
  backdrop-filter: blur(5px);
  -webkit-backdrop-filter: blur(5px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.update-banner::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 70% 30%, rgba(255, 255, 255, 0.1) 0%, transparent 60%);
  z-index: 0;
}

.banner-purple {
  background-color: rgba(128, 0, 255, 0.7);
}

.banner-purple::before {
  background: radial-gradient(circle at 70% 30%, rgba(255, 255, 255, 0.1) 0%, transparent 60%);
}

.banner-mix {
  background-color: rgba(128, 0, 255, 0.7);
}

.banner-mix::before {
  background: radial-gradient(circle at 50% 50%, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
}

.banner-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  height: 100%;
  position: relative;
  z-index: 1;
}

.banner-title {
  display: flex;
  flex-direction: column;
}

.banner-title-main {
  font-size: 38rpx;
  color: #FFFFFF;
  font-weight: bold;
  margin-bottom: 15rpx;
  text-shadow: 0 0 10rpx rgba(255, 255, 255, 0.5);
  letter-spacing: 1px;
}

.banner-title-sub {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  letter-spacing: 0.5px;
}

.banner-image {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 50%;
  position: relative;
  overflow: hidden;
  box-shadow: 0 0 15rpx rgba(255, 255, 255, 0.3);
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.banner-image::before {
  content: '';
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  right: -10rpx;
  bottom: -10rpx;
  background: radial-gradient(circle at center, rgba(255, 255, 255, 0.2) 0%, transparent 70%);
  z-index: 0;
  filter: blur(5px);
}

/* 功能列表样式 */
.function-list {
  background-color: rgba(20, 20, 40, 0.6);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: var(--radius-lg);
  overflow: hidden;
  margin-bottom: 30rpx;
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

.function-item {
  display: flex;
  align-items: center;
  padding: 40rpx;
  position: relative;
  transition: all 0.3s ease;
}

.function-item:not(:last-child)::after {
  content: '';
  position: absolute;
  left: 40rpx;
  right: 40rpx;
  bottom: 0;
  height: 1px;
  background: linear-gradient(90deg,
    transparent 0%,
    rgba(255, 255, 255, 0.1) 15%,
    rgba(255, 255, 255, 0.1) 85%,
    transparent 100%);
}

.function-item:active {
  background-color: rgba(92, 232, 33, 0.1);
}

.item-content {
  flex: 1;
  font-size: 32rpx;
  color: var(--color-text-primary);
  padding-left: 20rpx;
  letter-spacing: 0.5px;
}

.item-count {
  font-size: 28rpx;
  color: var(--color-text-secondary);
  margin-right: 30rpx;
}

.item-arrow {
  width: 18rpx;
  height: 18rpx;
  display: inline-block;
  border-top: 2rpx solid var(--color-primary);
  border-right: 2rpx solid var(--color-primary);
  transform: rotate(45deg);
  box-shadow: 2rpx -2rpx 0 rgba(92, 232, 33, 0.3);
}

/* 退出登录按钮容器样式 */
.logout-container {
  padding: 20rpx 0;
  margin-top: auto;
  display: flex;
  justify-content: center;
  align-items: center;
}

.login-button-wrapper {
  transform: scale(0.85);
  margin: -10rpx 0;
}

/* 用户信息弹窗样式 */
.user-info-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(5px);
  -webkit-backdrop-filter: blur(5px);
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, visibility 0.3s ease;
  /* 确保内容不会在隐藏时显示 */
  pointer-events: none;
}

.user-info-modal.show {
  opacity: 1;
  visibility: visible;
  pointer-events: auto; /* 恢复交互 */
}

.user-info-container {
  width: 90%;
  max-width: 650rpx;
  background-color: rgba(20, 20, 40, 0.8);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: var(--radius-lg);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.5);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  animation: scale-in 0.3s ease forwards;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.user-info-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg,
    transparent 0%,
    rgba(92, 232, 33, 0.3) 15%,
    rgba(128, 0, 255, 0.3) 85%,
    transparent 100%);
}

.user-info-header {
  padding: 30rpx;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-info-title {
  font-size: 32rpx;
  color: var(--color-text-primary);
  font-weight: bold;
  text-shadow: 0 0 10rpx rgba(92, 232, 33, 0.5);
}

.user-info-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: var(--color-text-secondary);
  font-size: 40rpx;
  cursor: pointer;
  border-radius: 50%;
}

.user-info-close:active {
  background-color: rgba(92, 232, 33, 0.1);
}

.user-info-body {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 头像居中样式 */
.avatar-container-centered {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-bottom: 40rpx;
  margin-top: 20rpx;
  position: relative;
}

.avatar-btn-centered {
  padding: 0;
  background: none;
  border: none;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  position: relative;
}

.avatar-btn-centered::after {
  border: none;
}

.avatar-preview-centered {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 2px solid rgba(255, 255, 255, 0.2);
}

.nickname-container {
  width: 100%;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: center;
}

.nickname-input-centered {
  width: 100%;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-md);
  padding: 0 30rpx;
  color: var(--color-text-primary);
  font-size: 28rpx;
  text-align: center !important;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 确保输入框中的文本居中显示 */
.nickname-input-centered input {
  text-align: center !important;
}

.user-info-footer {
  padding: 30rpx;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.skip-btn {
  text-align: center;
  color: var(--color-text-secondary);
  font-size: 28rpx;
  margin-top: 20rpx;
  padding: 10rpx 0;
}

.skip-btn:active {
  opacity: 0.7;
}
