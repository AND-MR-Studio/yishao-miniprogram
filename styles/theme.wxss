/**
 * theme.wxss
 * 主题变量的集中管理
 */

/* 定义汇文明朝体字体 */
@font-face {
  font-family: 'Huiwen-mincho';
  src: url('https://chinese-font.netlify.app/font-cdn/packages/hwmct/dist/汇文明朝体/result.woff2') format('woff2');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}

/* 颜色系统 */
page {
  /* 主题颜色 */
  --color-primary: #572CEF;
  --color-primary-dark: #572CEF;
  --color-primary-light: #7B5FFF;

  /* 强调色 */
  --color-accent:rgb(64, 197, 86);
  --color-accent-dark: #5ce821;
  --color-accent-light: #8FFF5A;

  /* 背景色 */
  --color-background: #061429;
  --color-background-light: #061429;
  --color-background-dark: #03091A;

  /* 文本颜色 */
  --color-text-primary: #FFFFFF;
  --color-text-secondary: rgba(255, 255, 255, 0.7);
  --color-text-disabled: rgba(255, 255, 255, 0.3);
  --color-text-hint: rgba(255, 255, 255, 0.5);

  /* 状态颜色 */
  --color-success: #34C759;
  --color-warning: #FFCC00;
  --color-error: #FF3B30;
  --color-info: #5AC8FA;

  /* 光标颜色（供打字机效果使用） */
  --cursor-color: #FA5151;

  /* 字体族 */
  --font-family-base: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Microsoft YaHei', sans-serif;
  --font-family-sans: 'Source Han Sans CN', var(--font-family-base);
  --font-family-mincho: 'Huiwen-mincho', var(--font-family-base);
  --font-family-yahei: 'Microsoft YaHei', var(--font-family-base);

  /* 字号 - 符合微信小程序设计规范 */
  --font-size-xs: 20rpx;  /* 主Tab文字/时间 */
  --font-size-sm: 24rpx;  /* 消息列表时间/昵称 */
  --font-size-md: 28rpx;  /* 摘要/小按钮文字 */
  --font-size-lg: 34rpx;  /* 列表标题/导航标题/导航栏 */
  --font-size-xl: 40rpx;  /* 大标题 */
  --font-size-xxl: 48rpx;  /* 特大标题 */

  /* 行高 */
  --line-height-xs: 1.2;
  --line-height-sm: 1.4;
  --line-height-md: 1.6;
  --line-height-lg: 1.8;

  /* 字重 */
  --font-weight-light: 300;
  --font-weight-normal: 400;
  --font-weight-medium: 500;
  --font-weight-bold: 700;
  --font-weight-black: 900;

  /* 字间距 */
  --letter-spacing-tight: -0.6rpx;
  --letter-spacing-normal: 0;
  --letter-spacing-wide: 0.5rpx;

  /* 内外边距 */
  --spacing-xxs: 4rpx;
  --spacing-xs: 10rpx;
  --spacing-sm: 15rpx;
  --spacing-md: 20rpx;
  --spacing-lg: 30rpx;
  --spacing-xl: 40rpx;
  --spacing-xxl: 60rpx;

  /* 布局间距 */
  --layout-gutter: 30rpx;
  --layout-spacing: 40rpx;
  --layout-margin: 30rpx;

  /* 圆角 */
  --radius-xs: 4rpx;
  --radius-sm: 8rpx;
  --radius-md: 12rpx;
  --radius-lg: 16rpx;
  --radius-xl: 24rpx;
  --radius-circle: 50%;

  /* 边框 */
  --border-width-thin: 1px;
  --border-width-normal: 2px;
  --border-width-thick: 4px;
  --border-color: rgba(255, 255, 255, 0.1);

  /* 阴影 */
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  --shadow-md: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  --shadow-lg: 0 6rpx 16rpx rgba(0, 0, 0, 0.25);
  --shadow-xl: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);

  /* 发光效果 */
  --glow-primary: 0 0 15rpx rgba(87, 44, 239, 0.6);
  --glow-accent: 0 0 15rpx rgba(92, 232, 33, 0.6);

  /* 动画相关变量 */
  --transition-duration: 0.3s;
  --transition-timing: cubic-bezier(0.215, 0.610, 0.355, 1.000);
}

/* 文本基础样式 */
.text-base {
  font-family: var(--font-family-base);
  font-size: var(--font-size-md);
  line-height: var(--line-height-md);
  color: var(--color-text-primary);
  letter-spacing: var(--letter-spacing-normal);
}

/* 标题文本样式 */
.text-heading {
  font-family: var(--font-family-sans);
  font-weight: var(--font-weight-bold);
  letter-spacing: var(--letter-spacing-tight);
  color: var(--color-text-primary);
}

/* 汇文明朝体文本样式 */
.text-mincho {
  font-family: var(--font-family-mincho);
  font-weight: var(--font-weight-normal);
  letter-spacing: var(--letter-spacing-normal);
}

/* 大号明朝体 - 适合标题 */
.text-mincho-lg {
  font-family: var(--font-family-mincho);
  font-size: var(--font-size-lg);
  line-height: var(--line-height-md);
  font-weight: var(--font-weight-normal);
  letter-spacing: var(--letter-spacing-normal);
  color: var(--color-text-primary);
}

/* 中号明朝体 - 适合正文 */
.text-mincho-md {
  font-family: var(--font-family-mincho);
  font-size: var(--font-size-md);
  line-height: var(--line-height-md);
  font-weight: var(--font-weight-normal);
  letter-spacing: var(--letter-spacing-normal);
  color: var(--color-text-primary);
}

/* 小号明朝体 - 适合辅助文本 */
.text-mincho-sm {
  font-family: var(--font-family-mincho);
  font-size: var(--font-size-sm);
  line-height: var(--line-height-sm);
  font-weight: var(--font-weight-normal);
  letter-spacing: var(--letter-spacing-normal);
  color: var(--color-text-secondary);
}


/* 辅助文本样式 */
.text-caption {
  font-family: var(--font-family-sans);
  font-size: var(--font-size-sm);
  line-height: var(--line-height-sm);
  color: var(--color-text-secondary);
  letter-spacing: var(--letter-spacing-wide);
}

.text-hint {
  font-family: var(--font-family-sans);
  font-size: var(--font-size-xs);
  line-height: var(--line-height-xs);
  color: var(--color-text-hint);
  letter-spacing: var(--letter-spacing-normal);
}

/* 按钮文本样式 */
.text-button {
  font-family: var(--font-family-yahei);
  font-size: var(--font-size-sm);
  line-height: var(--line-height-sm);
  font-weight: var(--font-weight-medium);
  letter-spacing: var(--letter-spacing-normal);
}

/* 导航文本样式 */
.text-nav {
  font-family: var(--font-family-sans);
  font-size: var(--font-size-sm);
  line-height: var(--line-height-sm);
  font-weight: var(--font-weight-medium);
  letter-spacing: var(--letter-spacing-normal);
}

/* 微信小程序规范样式 */

/* 列表样式 */
.list-item {
  padding: 24rpx 30rpx;
  background-color: #FFFFFF;
  position: relative;
  display: flex;
  align-items: center;
}

.list-item-dark {
  background-color: var(--color-background-light);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.list-title {
  font-size: var(--font-size-lg);
  color: var(--color-text-primary);
  font-weight: var(--font-weight-medium);
  margin-bottom: 8rpx;
}

.list-subtitle {
  font-size: var(--font-size-md);
  color: var(--color-text-secondary);
  margin-bottom: 4rpx;
}

.list-info {
  font-size: var(--font-size-sm);
  color: var(--color-text-hint);
}

.list-right {
  margin-left: auto;
  text-align: right;
}

/* 按钮状态样式 */
.btn {
  font-size: var(--font-size-md);
  line-height: 2.8;
  padding: 0 30rpx;
  border-radius: var(--radius-md);
  text-align: center;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.btn-primary {
  background-color: var(--color-primary);
  color: #FFFFFF;
}

.btn-primary:active {
  background-color: var(--color-primary-dark);
  opacity: 0.9;
}

.btn-disabled {
  background-color: rgba(87, 44, 239, 0.3);
  color: rgba(255, 255, 255, 0.5);
}

.btn-loading {
  position: relative;
  pointer-events: none;
}

.btn-loading::after {
  content: "";
  position: absolute;
  left: 50%;
  top: 50%;
  width: 30rpx;
  height: 30rpx;
  margin: -15rpx 0 0 -15rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.2);
  border-top-color: #FFFFFF;
  border-radius: 50%;
  animation: btn-loading 0.8s infinite linear;
}

@keyframes btn-loading {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 图标规范样式 */
.icon {
  width: 48rpx;
  height: 48rpx;
}

.icon-sm {
  width: 32rpx;
  height: 32rpx;
}

.icon-lg {
  width: 64rpx;
  height: 64rpx;
}

.icon-xl {
  width: 80rpx;
  height: 80rpx;
}
