<!--components/input-bar/index.wxml-->
<!-- 底部输入区域 -->
<view class="input-area">
  <view class="input-container">
    <!-- 语音按钮 -->
    <view class="voice-btn" 
      catchtouchstart="handleVoiceStart" 
      catchtouchend="handleVoiceEnd"
      catchtouchmove="handleVoiceMove"
      catchtouchcancel="handleVoiceEnd"
      hover-class="voice-btn-hover">
      <text class="font_family icon-voice"></text>
    </view>
    
    <!-- 输入框 -->
    <view class="input-box {{isRecording ? (isCancelled ? 'recording-cancel' : 'recording') : ''}} {{inputFocus ? 'focus' : ''}}">
      <input class="input-field" 
        value="{{inputValue}}"
        placeholder="输入你的问题......"
        placeholder-class="input-placeholder"
        cursor-spacing="20"
        adjust-position="{{true}}"
        hold-keyboard="{{false}}"
        confirm-type="send"
        confirm-hold="{{false}}"
        bindinput="handleInput"
        bindconfirm="handleSend"
        bindfocus="handleFocus"
        bindblur="handleBlur"
        focus="{{inputFocus}}"
        hidden="{{isRecording}}"
      />
      
      <!-- 录音中UI -->
      <view class="recording-ui" wx:if="{{isRecording}}">
        <view class="recording-waves">
          <view class="wave wave1"></view>
          <view class="wave wave2"></view>
          <view class="wave wave3"></view>
        </view>
        <text class="recording-text">{{isCancelled ? '松开手指，取消发送' : '松开发送，上滑取消'}}</text>
      </view>
    </view>

    <!-- 发送按钮 -->
    <view class="send-btn {{hasContent ? 'active' : 'inactive'}}" bindtap="handleSend" hover-class="{{hasContent ? 'send-btn-active-hover' : ''}}">
      <text class="font_family icon-question"></text>
    </view>
  </view>
</view>