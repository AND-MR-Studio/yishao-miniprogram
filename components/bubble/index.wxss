/* components/bubble/index.wxss */
.bubble {
  position: absolute;
  width: 80px;
  height: 80px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 217, 173, 0.48);
  border: 2px solid rgba(96, 255, 250, 0.55);
  box-shadow: 0 4px 15px rgba(67, 227, 255, 0.38);
  backdrop-filter: blur(20px);
  transition: transform 0.3s ease, opacity 0.3s ease;
  animation: floating 4s ease-in-out infinite;
  will-change: transform, opacity;
  z-index: 3; /* 确保在GIF上层 */
}

/* 重新定义浮动动画，使其更自然 */
@keyframes floating {
  0% { transform: translateY(0) rotate(0deg); }
  25% { transform: translateY(-8px) rotate(1deg); }
  50% { transform: translateY(0) rotate(0deg); }
  75% { transform: translateY(8px) rotate(-1deg); }
  100% { transform: translateY(0) rotate(0deg); }
}

/* 动态添加动画延迟 */
.bubble[animation-delay="0"] { animation-delay: 0s; }
.bubble[animation-delay="0.6"] { animation-delay: -0.6s; }
.bubble[animation-delay="1.2"] { animation-delay: -1.2s; }
.bubble[animation-delay="1.8"] { animation-delay: -1.8s; }
.bubble[animation-delay="2.4"] { animation-delay: -2.4s; }
.bubble[animation-delay="3"] { animation-delay: -3s; }

/* 气泡内部 */
.bubble-inner {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

/* 光晕效果 */
.bubble::before {
  content: '';
  position: absolute;
  width: 150%;
  height: 150%;
  top: -25%;
  left: -25%;
  border-radius: 50%;
  opacity: 0.7;
  mix-blend-mode: overlay;
  transition: all 0.3s ease;
}

/* 添加内部浮动高光 - 使用不同的动画周期 */
.bubble-inner::after {
  content: '';
  position: absolute;
  width: 20%;
  height: 20%;
  top: 15%;
  left: 15%;
  background: radial-gradient(
    circle at center,
    rgba(255, 255, 255, 0.9) 0%,
    rgba(255, 255, 255, 0.5) 50%,
    transparent 100%
  );
  border-radius: 50%;
  opacity: 0.7;
  animation: float-highlight 5s ease-in-out infinite;
}

@keyframes float-highlight {
  0% { transform: translate(0, 0); opacity: 0.7; }
  25% { transform: translate(5%, 5%); opacity: 0.8; }
  50% { transform: translate(10%, 0%); opacity: 0.7; }
  75% { transform: translate(5%, -5%); opacity: 0.6; }
  100% { transform: translate(0, 0); opacity: 0.7; }
}

/* 气泡文字 */
.bubble-text {
  color: rgba(255, 255, 255, 0.9);
  font-size: 14px;
  text-align: center;
  padding: 5px;
  word-break: break-all;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  opacity: 1;
  z-index: 2;
  position: relative;
  font-weight: 500;
  transition: opacity 0.3s ease, transform 0.3s ease;
}

/* 状态类 */
.bubble.active {
  transform: scale(1.1);
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
  animation: none;
}

.bubble.active .bubble-text {
  transform: scale(1.1);
  text-shadow: 0 0 5px rgba(255, 255, 255, 0.8);
}

.bubble.active::before {
  transform: scale(1.1);
  opacity: 0.9;
}

.bubble.active .bubble-inner {
  background: radial-gradient(
    circle at 30% 30%,
    rgba(220, 255, 225, 0.9) 0%,
    rgba(180, 255, 190, 0.7) 40%,
    rgba(140, 255, 170, 0.5) 60%,
    rgba(120, 240, 150, 0.4) 100%
  );
  box-shadow: inset 0 0 25px rgba(255, 255, 255, 0.8), 0 0 20px rgba(160, 255, 112, 0.8);
}

.bubble.dragging {
  transition: none;
  animation: none;
}

.bubble.hidden {
  opacity: 0;
  pointer-events: none;
}

.bubble.animating {
  transition: all 0.3s ease;
}

/* 气泡消失动画 */
.bubble.fade-out {
  animation: fadeOut 0.5s ease-out forwards;
}

/* 气泡出现动画 */
.bubble.fade-in {
  animation: fadeIn 0.5s ease-out forwards;
}

@keyframes fadeOut {
  from {
    opacity: 1;
    transform: scale(1);
  }
  to {
    opacity: 0;
    transform: scale(0.8);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

