/**
 * 新用户引导层样式
 * 使用主题色系统，简化结构，去除多余嵌套
 */

/* ===== 引导层容器 ===== */
.guide-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: var(--glass-bg-dark);
  backdrop-filter: var(--glass-blur);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
  pointer-events: none;
  transition: opacity var(--transition-duration) ease;
}

.guide-overlay.show {
  opacity: 1;
  pointer-events: auto;
}

/* ===== 引导内容区域 ===== */
.guide-content {
  width: 90%;
  max-width: 600rpx;
  position: absolute;
  bottom: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-lg);
  padding: var(--spacing-lg);
}

/* ===== 引导项通用样式 ===== */
.guide-item {
  width: 100%;
  max-width: 500rpx;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  gap: var(--spacing-sm);
  padding: var(--spacing-sm) var(--spacing-md);
  background: var(--glass-bg-dark);
  border: var(--border-width-thin) solid var(--color-primary);
  border-radius: var(--radius-lg);
  box-sizing: border-box;
}

/* ===== 引导文字 ===== */
.guide-text {
  font-size: var(--font-size-md);
  color: var(--color-text-primary);
  text-align: center;
  letter-spacing: var(--letter-spacing-normal);
  height: 40rpx;
  line-height: 40rpx;
  margin: var(--spacing-xs) 0;
}

/* ===== 指示器容器通用样式 ===== */
.hand-container,
.tap-indicator,
.press-indicator {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* ===== 手型指示器 ===== */
.hand-indicator {
  width: 100%;
  height: 100%;
  animation: hand-swipe 2s infinite ease-in-out;
  filter: drop-shadow(0 0 5rpx var(--color-accent));
}

/* ===== 双击指示器 ===== */
.tap-circle {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  border-radius: var(--radius-circle);
  background: rgba(92, 232, 33, 0.2);
  border: var(--border-width-normal) solid var(--color-accent);
  animation: double-tap 2s infinite;
}

.tap-circle.tap-like {
  background: rgba(92, 232, 33, 0.2);
  border-color: var(--color-accent);
  animation: double-tap-like 2s infinite;
}

/* ===== 长按指示器 ===== */
.press-finger {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  border-radius: var(--radius-circle);
  background: var(--color-text-primary);
  box-shadow: var(--shadow-md);
  z-index: 2;
  animation: press-finger 2s infinite;
}

.press-finger.press-favorite {
  background: var(--color-warning);
  box-shadow: 0 0 10rpx var(--color-warning);
  animation: press-finger-favorite 2s infinite;
}

.press-ripple {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  border-radius: var(--radius-circle);
  background: transparent;
  border: var(--border-width-normal) solid var(--color-accent);
  z-index: 1;
  animation: press-ripple 2s infinite;
}

/* ===== 关闭按钮 ===== */
.guide-close-btn {
  margin-top: var(--spacing-sm);
  padding: var(--spacing-sm) 50rpx;
  background: var(--color-primary);
  border-radius: 50rpx;
  color: var(--color-text-primary);
  font-size: var(--font-size-sm);
  text-align: center;
  transition: all var(--transition-duration) ease;
}

.guide-close-btn:active {
  transform: scale(0.95);
  background: var(--color-primary-dark);
  box-shadow: var(--glow-primary);
}

/* ===== 动画效果 ===== */

/* 手型滑动动画 */
@keyframes hand-swipe {
  0%, 100% {
    transform: translateX(-40rpx);
    opacity: 0.7;
  }
  25%, 75% {
    transform: translateX(0);
    opacity: 1;
  }
  50% {
    transform: translateX(40rpx);
    opacity: 0.7;
  }
}

/* 双击通用动画 */
@keyframes double-tap {
  0%, 100% {
    transform: scale(1);
    opacity: 0.2;
  }
  10%, 40% {
    transform: scale(1.2);
    opacity: 0.8;
  }
  15%, 35% {
    transform: scale(1);
    opacity: 0.5;
  }
  60%, 90% {
    transform: scale(1.2);
    opacity: 0.8;
  }
  65%, 85% {
    transform: scale(1);
    opacity: 0.5;
  }
}

/* 双击点赞动画 */
@keyframes double-tap-like {
  0%, 100% {
    transform: scale(1);
    opacity: 0.2;
  }
  10%, 40% {
    transform: scale(1.2);
    opacity: 0.8;
    box-shadow: var(--glow-accent);
  }
  15%, 35% {
    transform: scale(1);
    opacity: 0.5;
  }
  60%, 90% {
    transform: scale(1.2);
    opacity: 0.8;
    box-shadow: var(--glow-accent);
  }
  65%, 85% {
    transform: scale(1);
    opacity: 0.5;
  }
}

/* 长按手指动画 */
@keyframes press-finger {
  0%, 100% {
    transform: scale(1);
    opacity: 0.8;
  }
  50% {
    transform: scale(0.9);
    opacity: 1;
  }
}

/* 长按收藏手指动画 */
@keyframes press-finger-favorite {
  0%, 100% {
    transform: scale(1);
    opacity: 0.8;
  }
  50% {
    transform: scale(0.9);
    opacity: 1;
    box-shadow: 0 0 15rpx var(--color-warning);
  }
}

/* 长按波纹动画 */
@keyframes press-ripple {
  0% {
    transform: scale(1);
    opacity: 0;
  }
  25% {
    opacity: 0.5;
  }
  50% {
    transform: scale(1.5);
    opacity: 0.3;
  }
  75% {
    opacity: 0.1;
  }
  100% {
    transform: scale(2);
    opacity: 0;
  }
}
