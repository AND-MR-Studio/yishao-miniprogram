/* components/button/index.wxss */

/* 按钮容器 */
.btn-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 120rpx;
}

/* 点亮按钮 */
.btn-light {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 13rpx 132rpx;
  gap: 10rpx;
  width: 100rpx;
  height: 56rpx;
  background: #5CE821;
  box-shadow: 0rpx 10rpx 20rpx rgba(4, 244, 77, 0.2);
  border-radius: 100rpx;
}

/* 点亮按钮文本 */
.btn-text-light {
  font-family: 'Huiwen-mincho';
  font-style: normal;
  font-weight: 400;
  font-size: 24rpx;
  line-height: 24rpx;
  display: flex;
  align-items: center;
  text-align: center;
  color: #000000;
}

/* 未点亮按钮 */
.btn-unlight {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 13rpx 132rpx;
  gap: 10rpx;
  width: 100rpx;
  height: 56rpx;
  border: 1rpx solid #959DAE;
  border-radius: 100rpx;
}

/* 未点亮按钮文本 */
.btn-text-normal {
  font-family: 'Huiwen-mincho';
  font-style: normal;
  font-weight: 400;
  font-size: 24rpx;
  line-height: 24rpx;
  display: flex;
  align-items: center;
  text-align: center;
  color: #959DAE;
}

/* 确定类型按钮 - 完全独立样式 */
.btn-confirm {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0;
  width: 102rpx;
  height: 62rpx;
  border: 1px solid #FFFFFF;
  border-radius: 30rpx;
  transition: all 0.2s ease;
  box-sizing: border-box;
}

/* 确定按钮的果冻动画 */
.btn-confirm.jelly-animate {
  animation: jelly-effect 0.6s ease;
}

.btn-confirm:active {
  transform: scale(0.95);
  background: #5CE821;
}

/* 确定按钮文本 */
.btn-text-confirm {
  font-family: 'Source Han Sans CN';
  font-style: normal;
  font-weight: 400;
  font-size: 28rpx;
  line-height: 28rpx;
  display: flex;
  align-items: center;
  text-align: center;
  color: #FFFFFF;
}

/* 深色按钮样式 */
.btn-dark {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 6rpx 20rpx;
  gap: 8rpx;
  width: 100%; /* 默认宽度，可通过属性覆盖 */
  height: 88rpx; /* 默认高度，可通过属性覆盖 */
  background: #29374F;
  border-radius: 30rpx;
  transition: all 0.2s ease;
  box-sizing: border-box;
}

.btn-dark:active {
  transform: scale(0.95);
  background: #1a2436;
}

/* 深色按钮文本 */
.btn-text-dark {
  font-family: 'Microsoft YaHei';
  font-style: normal;
  font-weight: 400;
  font-size: 28rpx;
  line-height: 44rpx;
  text-align: center;
  color: #FFFFFF;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/* 开关容器 */
.switch-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0;
  gap: 20rpx;
  width: 100%;
  height: 62rpx;
  box-sizing: border-box;
}

/* 开关标签 */
.item-label {
  flex: 1;
  font-family: 'Source Han Sans CN';
  font-style: normal;
  font-weight: 500;
  font-size: 30rpx;
  line-height: 44rpx;
  display: flex;
  align-items: center;
  color: #2A2D32;
  opacity: 0.8;
}

/* Switch 开关样式 */
.switch {
  position: relative;
  margin: 0;
  width: 51px;
  height: 31px;
  background: #E9E9EA;
  border-radius: 100px;
  flex: none;
  align-self: center;
  transition: background-color 0.3s ease;
}

.switch.active {
  background: #5CE821;
}

/* 添加果冻动画效果 */
.switch.jelly-animate {
  animation: jelly-effect 0.6s ease;
}

/* 开关圆形按钮 */
.switch-knob {
  position: absolute;
  width: 27px;
  height: 27px;
  left: 2px;
  top: calc(50% - 27px/2);
  background: #FFFFFF;
  border: 0.5px solid rgba(0, 0, 0, 0.04);
  box-shadow: 0px 3px 8px rgba(0, 0, 0, 0.15);
  border-radius: 50%;
  transition: left 0.3s ease;
}

.switch.active .switch-knob {
  left: calc(50% - 27px/2 + 10px);
}

/* 按钮的果冻动画 */
.switch.jelly-animate .switch-knob {
  animation: jelly-knob 0.6s ease;
}

/* Radio 单选按钮样式 */
.font-size-option {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0;
  gap: 20rpx;
  width: auto;
  height: 48rpx;
}

.radio {
  box-sizing: border-box;
  width: 48rpx;
  height: 48rpx;
  background: #F4F4F4;
  mix-blend-mode: normal;
  border: 3rpx solid #CACACA;
  border-radius: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: background-color 0.3s ease;
}

.radio.active {
  background: #5CE821;
  border: none;
}

/* Radio的果冻动画 */
.radio.jelly-animate {
  animation: jelly-effect 0.6s ease;
}

.radio-inner {
  width: 24rpx;
  height: 24rpx;
  background: #FFFFFF;
  border-radius: 50%;
  animation: jelly-knob 0.6s ease;
}

.option-label {
  width: auto;
  min-width: 28rpx;
  height: 40rpx;
  font-family: 'Source Han Sans CN';
  font-style: normal;
  font-weight: 400;
  font-size: 28rpx;
  line-height: 40rpx;
  display: flex;
  align-items: center;
  letter-spacing: -0.6rpx;
  color: #2A2D32;
  opacity: 0.6;
}

/* 字体大小选择组合样式 */
.font-size-setting {
  flex-direction: column;
  align-items: flex-start;
  gap: 20rpx;
  height: 134rpx;
}

.font-size-label {
  width: 100%;
  font-family: 'Source Han Sans CN';
  font-style: normal;
  font-weight: 500;
  font-size: 30rpx;
  line-height: 44rpx;
  display: flex;
  align-items: center;
  letter-spacing: -0.6rpx;
  color: #2A2D32;
  opacity: 0.8;
}

.font-size-options {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0;
  width: 100%;
  height: 48rpx;
}

/* 果冻Q弹动画效果（共用） */
@keyframes jelly-effect {
  0%, 100% {
    transform: scale(1, 1);
  }
  30% {
    transform: scale(1.1, 0.9);
  }
  40% {
    transform: scale(0.9, 1.1);
  }
  50% {
    transform: scale(1.05, 0.95);
  }
  60% {
    transform: scale(0.95, 1.05);
  }
  70% {
    transform: scale(1.03, 0.97);
  }
  80% {
    transform: scale(0.97, 1.03);
  }
  90% {
    transform: scale(1.01, 0.99);
  }
}

@keyframes jelly-knob {
  0% { transform: scale(1); }
  30% { transform: scale(1.2, 0.85); }
  40% { transform: scale(0.9, 1.15); }
  50% { transform: scale(1.1, 0.9); }
  65% { transform: scale(0.95, 1.05); }
  80% { transform: scale(1.05, 0.98); }
  100% { transform: scale(1); }
}

/* 开关按钮样式 */
.btn-dark.jelly-animate {
  animation: jelly-effect 0.6s ease;
}