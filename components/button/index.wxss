/* components/button/index.wxss */

/* 果冻动画容器样式 */
.jelly-effect-container {
  position: relative;
  display: inline-flex;
  overflow: visible;
  z-index: 1;
}

/* 按钮容器 */
.btn-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 120rpx;
  overflow: visible;
}

/* 点亮按钮 */
.btn-light {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 13rpx 0rpx;
  gap: 10rpx;
  width: 100rpx;
  height: 56rpx;
  background: #5CE821;
  box-shadow: 0rpx 10rpx 20rpx rgba(4, 244, 77, 0.2);
  border-radius: 100rpx;
  transition: all 0.3s ease;
}

/* 按下状态的按钮样式 - 圆形 */
.btn-light.pressed {
  width: 120rpx !important;
  height: 120rpx !important;
  min-width: 120rpx !important;
  min-height: 120rpx !important;
  max-width: 120rpx !important;
  max-height: 120rpx !important;
  padding: 0 !important;
  margin: 0 auto !important;
  border-radius: 50% !important;
  background-color: #5CE821 !important;
  box-shadow: 0rpx 10rpx 25rpx rgba(4, 244, 77, 0.3) !important;
  z-index: 1000 !important;
  transition: all 0.2s cubic-bezier(0.34, 1.56, 0.64, 1) !important; /* 弹性过渡效果 */
  display: flex !important;
  justify-content: center !important;
  align-items: center !important;
  overflow: hidden !important;
  box-sizing: border-box !important;
  transform-origin: center center !important;
}

/* 点亮按钮文本 */
.btn-text-light {
  composes: text-mincho-sm;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #000000;
}

/* 未点亮按钮 */
.btn-unlight {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 13rpx 0rpx;
  gap: 10rpx;
  width: 100rpx;
  height: 56rpx;
  border: 1rpx solid#4a4e57;
  border-radius: 100rpx;
  transition: transform 0.15s ease, background-color 0.15s ease, border-color 0.15s ease;
}

/* 未点亮按钮文本 */
.btn-text-normal {
  composes: text-mincho-sm;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color:#4a4e57;
}

/* 保留原有的未点亮文本类，以避免兼容问题 */
.btn-text-unlight {
  composes: text-mincho-sm;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color:rgb(77, 77, 77);
}

/* 确定类型按钮 - 玻璃拟物感样式 */
.btn-confirm {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0;
  width: 102rpx;
  height: 62rpx;
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 30rpx;
  transition: all 0.2s ease;
  box-sizing: border-box;
  background: rgba(182, 182, 182, 0.2);
  backdrop-filter: blur(5px);
  -webkit-backdrop-filter: blur(5px);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.btn-confirm:active {
  transform: scale(0.95);
  background: rgba(89, 255, 150, 0.4);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.5);
}

/* 确定按钮文本 */
.btn-text-confirm {
  composes: text-button;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: rgba(255, 255, 255, 0.9);
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
  white-space: nowrap;
  overflow: visible;
}

/* 深色按钮样式 */
.btn-dark {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 6rpx 20rpx;
  gap: 8rpx;
  width: 100%; /* 默认宽度，可通过属性覆盖 */
  height: 88rpx; /* 默认高度，可通过属性覆盖 */
  background: #29374F;
  border-radius: 30rpx;
  transition: all 0.2s ease;
  box-sizing: border-box;
}

.btn-dark:active {
  transform: scale(0.95);
  background: #1a2436;
}

/* 深色按钮文本 */
.btn-text-dark {
  composes: text-button;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #FFFFFF;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/* 开关容器 */
.switch-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0;
  gap: 20rpx;
  width: 100%;
  height: 62rpx;
  box-sizing: border-box;
}

/* 开关标签 */
.item-label {
  composes: text-body-md;
  flex: 1;
  color: rgba(255, 255, 255, 0.85);
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
  padding-left: 10rpx;
}

/* Switch 开关样式 */
.switch {
  position: relative;
  margin: 0;
  width: 51px;
  height: 31px;
  background: rgba(233, 233, 234, 0.3);
  border-radius: 100px;
  flex: none;
  align-self: center;
  transition: all 0.3s ease;
  backdrop-filter: blur(5px);
  -webkit-backdrop-filter: blur(5px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.switch.active {
  background: rgba(92, 232, 33, 0.6);
  border: 1px solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 0 10rpx rgba(92, 232, 33, 0.2);
}

/* 开关圆形按钮 */
.switch-knob {
  position: absolute;
  width: 27px;
  height: 27px;
  left: 2px;
  top: calc(50% - 27px/2);
  background: rgba(255, 255, 255, 0.95);
  border: 0.5px solid rgba(255, 255, 255, 0.5);
  box-shadow: 0px 3px 8px rgba(0, 0, 0, 0.15);
  border-radius: 50%;
  transition: all 0.3s ease;
}

.switch.active .switch-knob {
  left: calc(50% - 27px/2 + 10px);
  background: #FFFFFF;
  box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.2);
}

/* Radio 单选按钮样式 */
.font-size-option {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0;
  gap: 20rpx;
  width: auto;
  height: 48rpx;
}

.radio {
  box-sizing: border-box;
  width: 48rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.radio.active {
  background: rgba(92, 232, 33, 0.6);
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 0 10rpx rgba(92, 232, 33, 0.2);
}

.radio-inner {
  width: 24rpx;
  height: 24rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 50%;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
}

.option-label {
  composes: text-body-sm;
  color: rgba(255, 255, 255, 0.8);
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 字体大小选择组合样式 */
.font-size-setting {
  flex-direction: column;
  align-items: flex-start;
  gap: 20rpx;
  height: 134rpx;
}

.font-size-label {
  composes: text-body-md;
  width: 100%;
  color: rgba(255, 255, 255, 0.85);
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.font-size-options {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0;
  width: 100%;
  height: 48rpx;
}

/* 使用公共果冻动画类 - 只应用于特定类型的按钮，不包括light和unlight */
.btn-confirm.jelly-animate,
.btn-dark.jelly-animate,
.switch.jelly-animate,
.radio.jelly-animate {
  animation: jelly-animation 0.6s var(--transition-ease);
}

/* 加载中动画样式 */
.loading-dots {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  width: 100%;
}

.loading-dots .dot {
  font-size: 36rpx;
  font-weight: bold;
  color: #000000;
  opacity: 0;
  animation: dot-animation 1.4s infinite;
  margin: 0 -4rpx;
}

.loading-dots .dot:nth-child(1) {
  animation-delay: 0s;
}

.loading-dots .dot:nth-child(2) {
  animation-delay: 0.2s;
}

.loading-dots .dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes dot-animation {
  0% {
    opacity: 0;
  }
  20% {
    opacity: 0;
  }
  50% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}