/* components/button/index.wxss */

/* 按钮容器 */
.btn-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 120rpx;
}

/* 点亮按钮 */
.btn-light {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 13rpx 132rpx;
  gap: 10rpx;
  width: 100rpx;
  height: 56rpx;
  background: #5CE821;
  box-shadow: 0rpx 10rpx 20rpx rgba(4, 244, 77, 0.2);
  border-radius: 100rpx;
  opacity: 0; /* 初始透明度为0 */
}

/* 点亮按钮文本 */
.btn-text-light {
  font-family: 'Huiwen-mincho';
  font-style: normal;
  font-weight: 400;
  font-size: 24rpx;
  line-height: 24rpx;
  display: flex;
  align-items: center;
  text-align: center;
  color: #000000;
}

/* 未点亮按钮 */
.btn-unlight {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 13rpx 132rpx;
  gap: 10rpx;
  width: 100rpx;
  height: 56rpx;
  border: 1rpx solid #959DAE;
  border-radius: 100rpx;
  opacity: 0; /* 初始透明度为0 */
}

/* 未点亮按钮文本 */
.btn-text-normal {
  font-family: 'Huiwen-mincho';
  font-style: normal;
  font-weight: 400;
  font-size: 24rpx;
  line-height: 24rpx;
  display: flex;
  align-items: center;
  text-align: center;
  color: #959DAE;
}

/* 自定义动画持续时间 */
.btn-slide-up {
  animation-duration: 0.5s;
}