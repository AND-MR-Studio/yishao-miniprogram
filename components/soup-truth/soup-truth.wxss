/* components/soup-truth/soup-truth.wxss */

/* 汤底容器 */
.soup-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 300rpx 0 0;
  width: 100%;
  min-height: 300rpx;
  position: fixed;
  box-sizing: border-box;
  will-change: transform;
}

/* 加载中样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 200rpx;
  width: 100%;
}

.loading-text {
  font-size: 28rpx;
  text-align: center;
  color: #333;
}

.blink-animation {
  animation: blink 1.5s infinite ease-in-out;
}

@keyframes blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.3; }
}

/* 汤底内容区样式 */
.soup-content {
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-md, 20rpx) 0;
  margin-bottom: var(--spacing-md, 20rpx);
  min-height: 200rpx;
  position: relative;
}

/* 标题容器 */
.soup-title-container {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0rpx 0;
  margin-bottom: 30rpx;
  text-align: center;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

/* 标题样式 */
.soup-title {
  font-size: var(--font-size-xl, 32rpx);
  font-weight: var(--font-weight-bold, bold);
  color: var(--color-text-primary, #333);
  text-align: center;
  text-shadow: 2rpx 2rpx 0rpx rgba(33, 123, 15, 0.58),
               0rpx 0rpx 33.2rpx rgba(23, 255, 93, 0.58);
}

/* 汤底容器 */
.soup-truth-container {
  width: 80%;
  padding: 40rpx;
  margin-left: auto;
  margin-right: auto;
  border-radius: 12rpx;
}

/* 汤底文本样式 */
.soup-truth {
  font-size: 30rpx;
  line-height: 2.2;
  color: var(--color-text-primary, #333);
  text-align: center;
  display: block;
  padding: 20rpx;
  white-space: normal;
  word-wrap: break-word;
  word-break: break-all;
  text-shadow: 1rpx 1rpx 0rpx rgba(33, 123, 15, 0.3);
}
