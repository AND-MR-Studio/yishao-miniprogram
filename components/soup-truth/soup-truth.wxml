<!--components/soup-truth/soup-truth.wxml-->
<view class="soup-container">
  <!-- 加载中状态 -->
  <view 
    class="loading-container" 
    wx:if="{{loading}}"
    aria-live="polite"
  >
    <text class="loading-text blink-animation">汤底加载中...</text>
  </view>
  
  <!-- 汤底内容区域 -->
  <block wx:else>
    <view class="soup-content">
      <!-- 标题 -->
      <view class="soup-title-container">
        <text class="soup-title">{{title}}</text>
      </view>
      
      <!-- 汤底 -->
      <view class="soup-truth-container">
        <text class="soup-truth">{{truth}}</text>
      </view>
    </view>
  </block>
</view>