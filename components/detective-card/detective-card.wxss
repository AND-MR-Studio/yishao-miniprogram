.answer-count {
  flex: 1;
  display: flex;
  align-items: center;
}

.answer-label {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.7);
  white-space: nowrap;
}

.answer-value {
  font-size: 36rpx;
  color: var(--color-accent); /* 绿色 */
  font-weight: bold;
  line-height: 1;
  margin-left: 8rpx;
}

.sign-in-btn {
  background-color:var(--color-primary); /* 紫色品牌色 */
  color: #FFFFFF;
  padding: 12rpx 30rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  border: 1px solid rgba(255, 255, 255, 0.2);
  white-space: nowrap;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.sign-in-btn:active {
  opacity: 0.8;
}

/* 禁用状态的签到按钮 */
.sign-in-btn.disabled {
  background-color: rgba(128, 128, 128, 0.6); /* 灰色 */
  color: rgba(255, 255, 255, 0.7);
  cursor: not-allowed;
  box-shadow: none;
}

.sign-in-btn.disabled:active {
  opacity: 1; /* 禁用状态下不改变透明度 */
}

/* 四栏数据样式 */
.stats-section {
  display: flex;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  padding: 10rpx 0;
  width: 100%;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 20rpx 0;
  transition: all 0.3s ease;
}

.stat-item:active {
  background-color: rgba(92, 232, 33, 0.1);
}

.stat-item-divider {
  position: absolute;
  right: 0;
  top: 20%;
  height: 60%;
  width: 1px;
  background-color: rgba(255, 255, 255, 0.1);
}

.stat-value {
  font-size: 38rpx;
  color: var(--color-accent);
  font-weight: bold;
  margin-bottom: 12rpx;
  text-shadow: 0 0 10rpx rgba(44, 239, 106, 0.5);
}

.stat-label {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  letter-spacing: 1px;
}
