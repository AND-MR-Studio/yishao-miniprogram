/* components/detective-card/detective-card.wxss */
/* 用户名片样式 */
.user-card {
  width: 100%;
  background-color: rgba(20, 20, 40, 0.7);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
  margin-bottom: 0;
  box-sizing: border-box;
  overflow: hidden;
  position: relative;
  border: 1px solid rgba(255, 255, 255, 0.08);
  max-width: 100%;
  display: flex;
  flex-direction: column;
}

.card-content {
  padding: 30rpx 30rpx;
  display: flex;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
}

.avatar-section {
  margin-right: 30rpx;
  position: relative;
  flex-shrink: 0;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.avatar-section-glow {
  position: absolute;
  top: -3rpx;
  left: -3rpx;
  right: -3rpx;
  bottom: -3rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--color-accent), var(--color-primary));
  z-index: -1;
  opacity: 0.7;
}

.avatar-large {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 2px solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 0 15rpx rgba(0, 0, 0, 0.2);
  object-fit: cover;
  margin: 10rpx; /* 确保头像在容器中居中 */
}

.info-section {
  flex: 1;
  min-width: 0; /* 防止内容溢出 */
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.name-badge-row {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.name-value {
  font-size: 36rpx;
  color: #FFFFFF;
  font-weight: bold;
  letter-spacing: 0.5px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-right: 15rpx;
}

.detective-id {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.7);
  letter-spacing: 0.5px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 8rpx;
}

/* 编辑资料按钮 */
.edit-profile {
  display: flex;
  align-items: center;
  margin-top: 4rpx;
}

.edit-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  letter-spacing: 0.5px;
  text-decoration: underline;
}

.edit-text:active {
  opacity: 0.7;
}

/* 分隔线 */
.card-divider {
  width: 100%;
  height: 1px;
  background-color: rgba(255, 255, 255, 0.1);
  margin: 0;
}

.level-badge {
  display: inline-block;
  background-color: var(--color-primary); /* 紫色品牌色 */
  color: #FFFFFF;
  font-size: 24rpx;
  font-weight: bold;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

/* 底部区域 */
.bottom-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  width: 100%;
  box-sizing: border-box;
}

