/* 对话区域 */
.dialog-area {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 50rpx;
  gap: 20rpx;
  position: fixed;
  /* 顶部位置留出导航栏高度 */
  top: 180rpx; /* 导航栏基础高度 + 状态栏高度 */
  left: 0;
  right: 0;
  /* 底部位置留出 tabbar 高度 */
  bottom: calc(220rpx + env(safe-area-inset-bottom)); /* tabbar高度 + 输入框高度 + 底部安全区域 */
  background: rgba(0, 0, 0, 0.4);
  z-index: 200;
  box-sizing: border-box;
}

.dialog-content {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 40rpx 0rpx;
  gap: 10rpx;
  width: 100%;
  height: 100%;
  position: relative;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  border-radius: 20rpx;
}

/* 基础消息样式 */
.message {
  composes: text-mincho-md;
  margin-bottom: 10rpx;
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
  white-space: pre-wrap;
  word-break: break-all;
  text-align: left;
  display: block;
}

/* 回复消息样式（红色） */
.response {
  color: var(--color-accent);
  position: relative;
}

/* 提示消息样式（绿色带发光效果） */
.hint {
  color: var(--color-success);
  text-shadow: 0rpx 0rpx 20rpx rgba(4, 244, 77, 0.5);
} 

/* 用户消息样式（白色） */
.user {
  color: var(--color-text-primary);
} 

/* 加载消息样式 */
.loading {
  color: var(--color-text-secondary);
  opacity: 0.8;
  animation: pulse 1.5s infinite ease-in-out;
}

@keyframes pulse {
  0% { opacity: 0.5; }
  50% { opacity: 0.9; }
  100% { opacity: 0.5; }
}

/* 打字机容器样式 */
.typing-container {
  display: block;
  text-align: left;
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}

/* 前缀文本样式 */
.prefix-text {
  composes: text-mincho-md;
  display: inline;
}

/* 打字机内容区域 */
.typing-content {
  display: inline;
  word-break: break-all;
  white-space: pre-wrap;
}

/* 打字机字符基础样式 */
.char-typing {
  display: inline-block;
  opacity: 0;
  transform: scale(0.9);
  transition: all 160ms cubic-bezier(0.215, 0.610, 0.355, 1.000);
  position: relative;
}

/* 显示状态 */
.char-typing.show {
  opacity: 1;
  transform: scale(1);
}

/* 活跃状态 */
.char-typing.active {
  opacity: 1;
}

/* 普通打字机效果 */
.char-typing.active.effect-normal {
  transform: scale(1);
}

/* 活跃状态 - 系统消息打字机 */
.response-char-typing-active {
  color: var(--color-accent);
}

/* 活跃状态 - 提示消息打字机 */
.hint-char-typing-active {
  color: var(--color-success);
  text-shadow: 0rpx 0rpx 20rpx rgba(4, 244, 77, 0.5);
}

/* 前一个字符状态 */
.char-typing.prev {
  opacity: 0.9;
  transform: scale(1);
  transition: all 200ms cubic-bezier(0.215, 0.610, 0.355, 1.000);
} 