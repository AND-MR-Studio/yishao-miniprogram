<view class="dialog-area">
  <scroll-view 
    class="dialog-content" 
    scroll-y="true" 
    scroll-with-animation="true"
    scroll-anchoring="true"
    enhanced="true"
    show-scrollbar="false"
    enable-flex="true"
  >
    <block wx:for="{{messages}}" wx:key="index">
      <!-- 用户消息 -->
      <text wx:if="{{item.type === 'user'}}" class="message user">{{item.content}}</text>
      
      <!-- 系统回复消息 -->
      <text wx:if="{{item.type === 'system'}}" class="message response">{{item.type === 'system' ? '> ' + item.content : item.content}}</text>
      
      <!-- 提示消息 -->
      <text wx:if="{{item.hint}}" class="message hint">{{item.hint}}</text>
    </block>
  </scroll-view>
</view> 