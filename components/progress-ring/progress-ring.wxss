/* components/progress-ring/progress-ring.wxss */
.progress-ring-container {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.progress-ring {
  position: absolute;
  top: 0;
  left: 0;
  transform: rotate(-90deg);
}

.progress-ring-circle-bg {
  stroke: rgba(255, 255, 255, 0.1);
  transition: stroke 0.3s;
}

.progress-ring-circle {
  stroke: #8C5BFF; /* 使用单一颜色，避免使用不支持的渐变 */
  transition: stroke-dashoffset 0.3s ease;
}

.progress-ring-content {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/* 粒子效果 */
.particles-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.particle {
  position: absolute;
  background: #8C5BFF; /* 使用单一颜色，与进度条匹配 */
  border-radius: 50%;
  opacity: 1;
  animation: particle-fade 0.4s ease-out forwards;
}

@keyframes particle-fade {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  100% {
    transform: scale(0);
    opacity: 0;
  }
}
