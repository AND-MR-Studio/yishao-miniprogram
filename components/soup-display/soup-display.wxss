/* components/soup-display/soup-display.wxss */

/* 汤面容器 */
.soup-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0 20rpx;
  isolation: isolate;
  width: 100%;
  min-height: 443rpx;
  position: relative;
  box-sizing: border-box;
}

/* 汤面标题 */
.soup-title {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 0 10rpx;
  width: 100%;
  height: 80rpx;
  flex: none;
  order: 0;
  flex-grow: 0;
  z-index: 0;
  margin-bottom: 50rpx; /* 增加与内容的间距 */
}

/* 标题框架 */
.soup-title-frame {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 0;
  width: 100%;
  height: 80rpx;
  flex: none;
  order: 0;
  align-self: stretch;
  flex-grow: 1;
}

/* 标题文字 */
.soup-title-text {
  width: 100%;
  height: 80rpx;
  font-family: 'Huiwen-mincho';
  font-style: normal;
  font-weight: 400;
  font-size: 44rpx; /* 调整为适合的大小 */
  line-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #FFFFFF;
  text-shadow: 2rpx 2rpx 0rpx rgba(33, 123, 15, 0.58), 0rpx 0rpx 33.2rpx rgba(23, 255, 93, 0.58);
  flex: none;
  order: 0;
  align-self: center;
  flex-grow: 1;
}

/* 汤面正文 */
.soup-content {
  display: flex;
  flex-direction: column;
  align-items: flex-start; /* 左对齐 */
  padding: 0;
  gap: 20rpx; /* 调整行间距 */
  width: 70%;
  max-width: 600rpx;
  flex: none;
  order: 1;
  flex-grow: 0;
  z-index: 1;
}

/* 正文行 */
.soup-content-line {
  font-family: 'Huiwen-mincho';
  font-style: normal;
  font-weight: 400;
  font-size: 34rpx;
  line-height: 48rpx;
  color: #FFFFFF;
  flex: none;
  flex-grow: 0;
}