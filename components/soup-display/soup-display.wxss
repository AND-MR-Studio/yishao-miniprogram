/* components/soup-display/soup-display.wxss */

:host {
  --soup-padding-top: 100rpx;
  --soup-min-height: 443rpx;
  --soup-title-size: 44rpx;
  --soup-text-size: 34rpx;
  --soup-line-height: 48rpx;
  --soup-spacing: 40rpx;
  --transition-duration: 0.3s;
  --transition-timing: cubic-bezier(0.215, 0.610, 0.355, 1.000);
}

/* 汤面容器 */
.soup-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--soup-padding-top) 0 0;
  width: 100%;
  min-height: var(--soup-min-height);
  position: relative;
  box-sizing: border-box;
  will-change: transform;
}

/* 加载中样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
  width: 100%;
}

.loading-text {
  font-size: var(--soup-text-size);
  color: var(--color-text-primary);
  text-align: center;
}

/* 汤面标题区样式 */
.soup-title-section {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 10rpx;
  margin-bottom: var(--soup-spacing);
  text-align: center;
}

.soup-title-frame {
  width: 90%;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
}

.soup-title {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-weight: 700;
  font-family: 'Huiwen-mincho';
  font-size: var(--soup-title-size);
  color: var(--color-text-primary);
  text-shadow: 2rpx 2rpx 0rpx rgba(33, 123, 15, 0.58),
               0rpx 0rpx 33.2rpx rgba(23, 255, 93, 0.58);
  transform: translateZ(0);
}

/* 动画状态样式 */
.soup-title.animation-active,
.soup-title.animation-complete {
  position: relative;
}

/* 汤面内容区样式 */
.soup-content-section {
  width: 80%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  min-height: 200px;
  max-height: 335px;
  border-radius: 8rpx;
  position: relative;
  transition: all var(--transition-duration) var(--transition-timing);
  will-change: transform, opacity;
}

.soup-content {
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  position: relative;
}

/* 汤面内容行样式 */
.soup-line-container {
  width: fit-content;
  margin-bottom: 30rpx;
  position: relative;
  display: flex;
  align-items: center;
  min-height: var(--soup-line-height);
}

.soup-text-line {
  display: inline-block;
  position: relative;
  white-space: nowrap;
  font-family: 'Huiwen-mincho';
  font-style: normal;
  font-weight: 400;
  font-size: var(--soup-text-size);
  line-height: var(--soup-line-height);
  color: var(--color-text-primary);
  transition: color var(--transition-duration) var(--transition-timing);
  transform: translateZ(0);
}

/* 静态模式样式 */
.soup-container.static-mode .typing-cursor {
  display: none;
}

.soup-container.static-mode .char-typing {
  opacity: 1 !important;
  transform: none !important;
  transition: none !important;
}