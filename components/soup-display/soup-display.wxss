/* components/soup-display/soup-display.wxss */
@import "../../styles/animation.wxss";

/* 汤面容器 */
.soup-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 300rpx 0 100rpx; /* 顶部和底部都添加padding，确保内容区域固定 */
  width: 100%;
  height: 100vh; /* 使用视口高度 */
  position: fixed;
  box-sizing: border-box;
  will-change: transform, filter;
  transition: opacity 0.6s var(--transition-decelerated), filter 0.3s ease;
}

/* 汤面内容样式 - 无模糊效果 */
.soup-container .soup-content {
  position: relative;
  opacity: 1;
  transition: opacity 0.6s var(--transition-decelerated);
}

/* 加载中的样式 */
.soup-container.loading {
  opacity: 0.6;
}

/* 汤面内容区样式 */
.soup-content {
  width: 70%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  height: 700rpx; /* 固定高度 */
  position: relative;
  transition: all 0.6s var(--transition-decelerated);
  will-change: transform, opacity;
  overflow-y: auto; /* 内容超出时可滚动 */
  box-sizing: border-box;
}

/* 标题容器样式 */
.title-container {
  width: 100%;
  margin-bottom: 20rpx;
  text-align: center;
}

/* 标题文本样式 - 使用明朝体 */
.title-text {
  font-family: var(--font-family-mincho);
  font-size: 34rpx; /* 符合小程序设计规范 - 列表标题/导航标题 */
  font-weight: var(--font-weight-medium);
  text-shadow: 2rpx 2rpx 0rpx rgba(33, 123, 15, 0.58),
               0rpx 0rpx 33.2rpx rgba(23, 255, 93, 0.58);
  letter-spacing: 4rpx;
  white-space: nowrap;
  display: inline-block;
  color: var(--color-text-primary);
}

/* 汤面文本样式 - 使用明朝体 */
.soup-text {
  font-family: var(--font-family-mincho);
  font-size: 28rpx; /* 符合小程序设计规范 - 摘要/小按钮文字 */
  line-height: 2.5;
  padding: 50rpx;
  text-align: center;
  white-space: pre-wrap;
  word-break: break-all;
  width: 100%;
  letter-spacing: 5rpx;
  box-sizing: border-box;
  flex: 1;
  color: var(--color-text-primary);
}

/* 底部控件样式已移至interaction-footer组件 */

/* 滑动反馈样式 */
.soup-container.swipe-feedback-left {
  animation: swipe-left 0.5s ease-out;
}

.soup-container.swipe-feedback-right {
  animation: swipe-right 0.5s ease-out;
}

/* 呼吸模糊效果 */
.soup-container.breathing-blur {
  animation: breathing-blur 2s infinite alternate ease-in-out;
}

@keyframes swipe-left {
  0% { transform: translateX(0); }
  20% { transform: translateX(-30rpx); }
  100% { transform: translateX(0); }
}

@keyframes swipe-right {
  0% { transform: translateX(0); }
  20% { transform: translateX(30rpx); }
  100% { transform: translateX(0); }
}

@keyframes breathing-blur {
  0% { filter: blur(0px); }
  50% { filter: blur(5px); }
  100% { filter: blur(0px); }
}