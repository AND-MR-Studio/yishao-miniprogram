/* components/soup-display/soup-display.wxss */
@import "../../styles/animation.wxss";

/* 汤面容器 */
.soup-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 300rpx 0 0; /* 减少顶部padding，为标签腾出空间 */
  width: 100%;
  min-height: 443rpx;
  position: fixed;
  box-sizing: border-box;
  will-change: transform;
  transition: opacity 0.6s var(--transition-decelerated);
}

/* 汤面内容样式 - 无模糊效果 */
.soup-container .soup-content {
  position: relative;
  opacity: 1;
  transition: opacity 0.6s var(--transition-decelerated);
}

/* 偷看模式下的内容样式 */
.soup-content.peeking {
  background: rgba(6, 20, 41, 0.7);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

/* 切换标签区域样式 */
.tab-switcher {
  position: fixed;
  top: 180rpx; /* 位置固定在顶部，留出导航栏空间 */
  left: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  z-index: 10;
  padding: 20rpx 0;
}

/* 标签容器 */
.tab-container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 60%;
  height: 70rpx;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-radius: 35rpx;
  border: 1rpx solid rgba(33, 0, 94, 0.8);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.4);
  overflow: hidden;
  position: relative;
  padding: 2rpx;
}

/* 标签样式 */
.tab {
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  transition: all 0.3s ease;
  z-index: 1;
}

/* 激活的标签 */

/* 标签文本 */
.tab-text {
  font-size: 28rpx;
  color: rgba(111, 111, 111, 0.5);
  transition: all 0.3s ease;
  z-index: 2;
}

/* 激活标签的文本 */
.tab.active .tab-text {
  color:rgb(155, 155, 155);
  font-weight: bold;
}

/* 标签背景 */
.tab {
  position: relative;
  overflow: hidden;
  margin: 4rpx;
  border-radius: 30rpx;
}

/* 激活的标签背景 */
.tab.active {
  background: rgba(23, 0, 80, 0.95);
  border-radius: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.5);
}

/* 未解决数量徽章 */
.badge {
  position: absolute;
  right: 15rpx;
  min-width: 32rpx;
  height: 32rpx;
  background:rgb(78, 30, 209);
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 22rpx;
  color: white;
  padding: 0 6rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  z-index: 2;
  font-weight: normal;
}

/* 加载中的样式 */
.soup-container.loading {
  opacity: 0.6;
}

/* 汤面内容区样式 */
.soup-content {
  width: 70%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  min-height: 200px;
  max-height: 335px;
  position: relative;
  transition: all 0.6s var(--transition-decelerated);
  will-change: transform, opacity;
}

/* 标题容器样式 */
.title-container {
  width: 100%;
  margin-bottom: 20rpx;
  text-align: center;
}

/* 标题文本样式 */
.title-text {
  font-size: 36rpx;
  font-weight: 700;
  text-shadow: 2rpx 2rpx 0rpx rgba(33, 123, 15, 0.58),
               0rpx 0rpx 33.2rpx rgba(23, 255, 93, 0.58);
  letter-spacing: 4rpx;
  white-space: nowrap;
  display: inline-block;
}

/* 汤面文本样式 */
.soup-text {
  font-size: 28rpx;
  line-height: 2.5;
  padding: 50rpx;
  text-align: center;
  white-space: pre-wrap;
  word-break: break-all;
  width: 100%;
  letter-spacing: 5rpx;
}

/* 收藏图标样式 */
.favorite-icon {
  position: fixed;
  bottom: -650rpx; /* 固定在页面底部往上一点的位置，在tabbar和开始喝汤按钮之间 */
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100; /* 提高z-index确保显示在其他元素上方 */
  opacity: 0.9;
  transition: all 0.3s ease;
}

/* 心形文本样式 - 玻璃拟物风格 */
.heart-text {
  font-size: 48rpx;
  color: rgba(158, 46, 255, 0.9); /* 紫色 */
  text-shadow: 0 2rpx 8rpx rgba(0, 230, 115, 0.4);
  line-height: 1;
}

/* 隐藏的收藏图标 */
.favorite-icon.hidden {
  opacity: 0;
  visibility: hidden;
}

/* 偷看模式下强制隐藏收藏图标 */
.favorite-icon.peek-hidden {
  display: none !important;
}