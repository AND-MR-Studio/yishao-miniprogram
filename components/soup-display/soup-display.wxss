/* components/soup-display/soup-display.wxss */
@import "../../styles/animation.wxss";

/* 汤面容器 */
.soup-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 300rpx 0 100rpx; /* 顶部和底部都添加padding，确保内容区域固定 */
  width: 100%;
  height: 100vh; /* 使用视口高度 */
  position: fixed;
  box-sizing: border-box;
  will-change: transform;
  transition: opacity 0.6s var(--transition-decelerated);
}

/* 汤面内容样式 - 无模糊效果 */
.soup-container .soup-content {
  position: relative;
  opacity: 1;
  transition: opacity 0.6s var(--transition-decelerated);
}

/* 偷看模式下的内容样式 */
.soup-content.peeking {
  background: rgba(6, 20, 41, 0.7);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
  border: 1px solid rgba(255, 255, 255, 0.1);
}



/* 加载中的样式 */
.soup-container.loading {
  opacity: 0.6;
}

/* 汤面内容区样式 */
.soup-content {
  width: 70%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  height: 700rpx; /* 固定高度 */
  position: relative;
  transition: all 0.6s var(--transition-decelerated);
  will-change: transform, opacity;
  overflow-y: auto; /* 内容超出时可滚动 */
  box-sizing: border-box;
}

/* 标题容器样式 */
.title-container {
  width: 100%;
  margin-bottom: 20rpx;
  text-align: center;
}

/* 标题文本样式 */
.title-text {
  font-size: 36rpx;
  font-weight: 700;
  text-shadow: 2rpx 2rpx 0rpx rgba(33, 123, 15, 0.58),
               0rpx 0rpx 33.2rpx rgba(23, 255, 93, 0.58);
  letter-spacing: 4rpx;
  white-space: nowrap;
  display: inline-block;
}

/* 汤面文本样式 */
.soup-text {
  font-size: 28rpx;
  line-height: 2.5;
  padding: 50rpx;
  text-align: center;
  white-space: pre-wrap;
  word-break: break-all;
  width: 100%;
  letter-spacing: 5rpx;
  box-sizing: border-box;
  flex: 1;
}

/* 图标容器样式 */
.icons-container {
  position: fixed;
  bottom: 300rpx; /* 固定在页面底部的位置，确保在汤面内容区域下方 */
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-start;
  z-index: 100; /* 提高z-index确保显示在其他元素上方 */
  gap: 60rpx; /* 图标之间的间距 */
  opacity: 1; /* 确保容器本身不影响子元素的透明度 */
}

/* 图标包装器样式 */
.icon-wrapper {
  width: 60rpx;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  opacity: 1; /* 完全不透明 */
  transition: all 0.3s ease;
}

/* 收藏图标样式 */
.favorite-icon {
  /* 特定于收藏图标的样式 */
}

/* 点赞图标样式 */
.like-icon {
  /* 特定于点赞图标的样式 */
}

/* 只读图标样式 */
.like-icon.read-only {
  cursor: default;
  pointer-events: none; /* 禁用点击事件 */
}

/* 图标文本样式 */
.heart-text {
  font-size: 48rpx;
  line-height: 1;
}

/* 收藏图标文本样式 */
.favorite-icon .heart-text {
  color: rgba(158, 46, 255, 0.9); /* 紫色 */
  text-shadow: 0 2rpx 8rpx rgba(0, 230, 115, 0.4);
}

/* 点赞图标文本样式 */
.like-icon .heart-text {
  color: rgba(255, 46, 84, 0.9); /* 红色 */
  text-shadow: 0 2rpx 8rpx rgba(255, 230, 0, 0.4);
}

/* 计数文本通用样式 */
.count-text {
  font-size: 24rpx;
  margin-top: 8rpx;
  text-align: center;
  font-weight: bold;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 收藏数量样式 */
.favorite-count {
  color: var(--color-accent);
}

/* 点赞数量样式 */
.like-count {
  color: var(--color-primary-light);
}

/* 隐藏的收藏图标 */
.favorite-icon.hidden {
  opacity: 0.6; /* 半透明而不是完全隐藏 */
}

/* 点赞图标激活样式 */
.like-icon.active {
  transform: scale(1.2);
}

/* 偷看模式下强制隐藏图标容器 */
.icons-container.peek-hidden {
  display: none !important;
}

/* 喝汤状态下强制隐藏图标容器 */
.icons-container.drinking-hidden {
  display: none !important;
}

/* 创作者感谢文字样式 */
.creator-credit {
  position: fixed;
  bottom: 300rpx;
  right: 40rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  z-index: 100;
  opacity: 0.8;
  transition: all 0.3s ease;
}

/* 创作者文本样式 */
.creator-text {
  font-size: 24rpx;
  color: var(--color-text-hint);
  font-weight: 100;
  letter-spacing: 2rpx;
}

/* 偷看模式下强制隐藏创作者感谢文字 */
.creator-credit.peek-hidden {
  display: none !important;
}