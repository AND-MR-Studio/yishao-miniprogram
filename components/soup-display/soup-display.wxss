/* components/soup-display/soup-display.wxss */
@import "../../styles/animation.wxss";

/* 汤面容器 */
.soup-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 300rpx 0 0;
  width: 100%;
  min-height: 443rpx;
  position: fixed;
  box-sizing: border-box;
  will-change: transform;
  transition: opacity 0.6s var(--transition-decelerated);
}

/* 加载中的样式 */
.soup-container.loading {
  opacity: 0.6;
}

/* 汤面内容区样式 */
.soup-content {
  width: 70%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  min-height: 200px;
  max-height: 335px;
  position: relative;
  transition: all 0.6s var(--transition-decelerated);
  will-change: transform, opacity;
}

/* 标题容器样式 */
.title-container {
  width: 100%;
  margin-bottom: 20rpx;
  text-align: center;
}

/* 标题文本样式 */
.title-text {
  font-size: 36rpx;
  font-weight: 700;
  text-shadow: 2rpx 2rpx 0rpx rgba(33, 123, 15, 0.58),
               0rpx 0rpx 33.2rpx rgba(23, 255, 93, 0.58);
  letter-spacing: 4rpx;
  white-space: nowrap;
  display: inline-block;
}

/* 汤面文本样式 */
.soup-text {
  font-size: 28rpx;
  line-height: 2.5;
  padding: 50rpx;
  text-align: center;
  white-space: pre-wrap;
  word-break: break-all;
  width: 100%;
  letter-spacing: 5rpx;
}

/* 收藏图标样式 */
.favorite-icon {
  position: fixed;
  bottom: -650rpx; /* 固定在页面底部往上一点的位置，在tabbar和开始喝汤按钮之间 */
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100; /* 提高z-index确保显示在其他元素上方 */
  opacity: 0.9;
  transition: all 0.3s ease;
}

/* 心形文本样式 - 玻璃拟物风格 */
.heart-text {
  font-size: 48rpx;
  color: rgba(158, 46, 255, 0.9); /* 紫色 */
  text-shadow: 0 2rpx 8rpx rgba(0, 230, 115, 0.4);
  line-height: 1;
}

/* 隐藏的收藏图标 */
.favorite-icon.hidden {
  opacity: 0;
  visibility: hidden;
}