/* components/soup-display/soup-display.wxss */

/* 汤面容器 */
.soup-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-xxl) 0 0;
  width: 100%;
  min-height: 443rpx;
  position: relative;
  box-sizing: border-box;
  will-change: transform;
}

/* 加载中样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
  width: 100%;
}

.loading-text {
  font-size: var(--font-size-md);
  color: var(--color-text-primary);
  text-align: center;
}

/* 汤面标题区样式 */
.soup-title-section {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 var(--spacing-xs);
  margin-bottom: var(--spacing-xl);
  text-align: center;
}

.soup-title-frame {
  width: 90%;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
}

.soup-title {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-weight: var(--font-weight-bold);
  font-family: 'Huiwen-mincho';
  font-size: var(--font-size-xl);
  color: var(--color-text-primary);
  text-shadow: 2rpx 2rpx 0rpx rgba(33, 123, 15, 0.58),
               0rpx 0rpx 33.2rpx rgba(23, 255, 93, 0.58);
  transform: translateZ(0);
}

/* 动画状态样式 */
.soup-title.animation-active,
.soup-title.animation-complete {
  position: relative;
}

/* 汤面内容区样式 */
.soup-content-section {
  width: 80%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  padding: var(--spacing-md) 0;
  margin-bottom: var(--spacing-md);
  min-height: 200px;
  max-height: 335px;
  border-radius: var(--radius-sm);
  position: relative;
  transition: all var(--transition-duration) var(--transition-timing);
  will-change: transform, opacity;
}

.soup-content {
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  position: relative;
}

/* 汤面内容行样式 */
.soup-line-container {
  width: fit-content;
  margin-bottom: var(--spacing-lg);
  position: relative;
  display: flex;
  align-items: center;
  min-height: calc(var(--font-size-md) * var(--line-height-md));
}

.soup-text-line {
  display: inline-block;
  position: relative;
  white-space: nowrap;
  font-family: 'Huiwen-mincho';
  font-style: normal;
  font-weight: var(--font-weight-normal);
  font-size: var(--font-size-md);
  line-height: var(--line-height-md);
  color: var(--color-text-primary);
  transition: color var(--transition-duration) var(--transition-timing);
  transform: translateZ(0);
}

/* 静态模式样式 */
.soup-container.static-mode .typing-cursor {
  display: none;
}

.soup-container.static-mode .char-typing {
  opacity: 1 !important;
  transform: none !important;
  transition: none !important;
}