<!--components/soup-display/soup-display.wxml-->
<view
  class="soup-container {{loading ? 'loading' : ''}} {{isPeeking ? 'clear' : 'blurred'}}"
>
  <!-- 汤面内容区域 -->
  <block wx:if="{{!loading}}">
    <view class="soup-content">
      <!-- 标题和内容分开显示 -->
      <view class="title-container" wx:if="{{currentSoup.title}}">
        <text class="title-text">{{currentSoup.title}}</text>
      </view>
      <text class="soup-text">{{displayContent}}</text>
    </view>

    <!-- 收藏图标 - 始终创建DOM元素，通过CSS控制显示/隐藏 -->
    <view class="favorite-icon {{isFavorite ? 'active' : 'hidden'}}">
      <text class="heart-text">⭐</text>
    </view>
  </block>
</view>