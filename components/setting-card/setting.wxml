<!--components/setting-card/setting.wxml-->
<view class="setting-mask {{show ? 'show' : 'hide'}}" bindtap="closePanel" catchtouchmove="preventTouchMove"></view>
<view class="setting-panel {{show ? 'show' : 'hide'}}" 
      style="padding-top: {{statusBarHeight}}rpx; {{panelStyle}}"
      bindtouchstart="handleTouchStart"
      bindtouchmove="handleTouchMove"
      bindtouchend="handleTouchEnd"
      catchtap="stopPropagation">
  <view class="setting-container">
    <!-- 添加关闭按钮，增加手势提示效果 -->
    <view class="close-bar" bindtap="handleDragIndicator">
      <view class="close-indicator"></view>
    </view>
    
    <!-- 问答设置区块 -->
    <view class="setting-section">
      <view class="section-title">问答设置</view>
      
      <view class="setting-item">
        <view class="item-label">放弃当前海龟汤</view>
        <custom-button 
          type="confirm" 
          text="确定" 
          bind:tap="abandonSoup" />
      </view>
      
      <view class="setting-item">
        <view class="item-label">清理缓存</view>
        <custom-button 
          type="confirm" 
          text="确定" 
          bind:tap="clearCache" />
      </view>
      
      <view class="setting-item font-size-setting">
        <view class="font-size-label">字体大小</view>
        <view class="font-size-options">
          <custom-button 
            type="radio" 
            text="小" 
            value="small"
            groupName="fontSize"
            active="{{fontSize === 'small'}}"
            bind:radiochange="handleRadioChange" />
          
          <custom-button 
            type="radio" 
            text="中" 
            value="medium"
            groupName="fontSize"
            active="{{fontSize === 'medium'}}"
            bind:radiochange="handleRadioChange" />
          
          <custom-button 
            type="radio" 
            text="大" 
            value="large"
            groupName="fontSize"
            active="{{fontSize === 'large'}}"
            bind:radiochange="handleRadioChange" />
        </view>
      </view>
    </view>
    
    <view class="divider"></view>
    
    <!-- 通用设置区块 -->
    <view class="setting-section">
      <view class="section-title">通用设置</view>
      
      <!-- 使用button组件作为开关 -->
      <custom-button 
        type="switch"
        label="音效"
        checked="{{soundOn}}"
        bind:change="toggleSwitch"
        data-type="soundOn"
        class="custom-button-class"
      />
      
      <custom-button 
        type="switch"
        label="震动"
        checked="{{vibrationOn}}"
        bind:change="toggleSwitch"
        data-type="vibrationOn"
        class="custom-button-class"
      />

      <custom-button 
        type="switch"
        label="跳过动画"
        checked="{{skipAnimation}}"
        bind:change="toggleSwitch"
        data-type="skipAnimation"
        class="custom-button-class"
      />
    </view>
    
    <view class="divider"></view>
    
    <!-- 联系我们区块 -->
    <view class="contact-section">
      <view class="section-title">联系我们</view>
      <view class="contact-buttons">
        <custom-button 
          type="dark" 
          text="用户反馈" 
          width="auto" 
          height="88rpx" 
          bind:tap="contactUs" 
          class="contact-button-class" />
        
        <custom-button 
          type="dark" 
          text="关于我们" 
          width="auto" 
          height="88rpx" 
          bind:tap="onAbout" 
          class="contact-button-class" />
      </view>
    </view>
    
    <view class="divider"></view>
    
    <!-- 关于信息 -->
    <view class="about-section">
      <view class="studio-logo"></view>
      <view class="copyright">Copyright © 2025 AND Studio.Designed by Yavin, Coded by Alex.</view>
    </view>
  </view>
</view>