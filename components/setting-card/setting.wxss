/* components/setting-card/setting.wxss */

/* 蒙层背景 */
.setting-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 1101;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  backdrop-filter: blur(4px);
  -webkit-backdrop-filter: blur(4px);
}

.setting-mask.show {
  opacity: 1;
  visibility: visible;
}

.setting-panel {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 15px 15px; /* 移除顶部padding，为固定指示器留空间 */
  position: fixed;
  width: 100%;
  /* 增加高度 */
  height: 70vh;
  max-height: 90vh;
  left: 0;
  bottom: 0;
  border-radius: 40rpx 40rpx 0 0;
  transform: translateY(100%);
  transition: all 0.3s ease-out;
  z-index: 1101;
  box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.15);
  box-sizing: border-box;
  overflow-x: hidden;
  overflow-y: auto; /* 允许内容滚动 */
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-top: 1px solid rgba(255, 255, 255, 0.3);

  /* 简洁的背景 - 与截图匹配 */
  background: rgba(60, 65, 75, 0.9);
}

.setting-panel.show {
  transform: translateY(0);
}

.setting-panel.hide {
  transform: translateY(100%);
}

/* 添加关闭指示器 - 固定在顶部 */
.close-bar {
  width: 100%;
  height: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: sticky;
  top: 0;
  z-index: 1200;
  border-radius: 40rpx 40rpx 0 0;
  margin-bottom: 0rpx;
}

.close-indicator {
  width: 60rpx;
  height: 6rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 3rpx;
  transition: all 0.2s ease;
}

.close-bar:active .close-indicator {
  width: 80rpx;
  background: rgba(255, 255, 255, 0.8);
}

/* 拖拽过程中的样式 - 配合panelDrag工具类使用 */
.dragging .close-indicator {
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0% {
    opacity: 0.5;
    transform: scale(1);
  }
  50% {
    opacity: 0.8;
    transform: scale(1.1);
  }
  100% {
    opacity: 0.5;
    transform: scale(1);
  }
}

/* 分割线样式 */
.divider {
  width: 100%;
  height: 1px;
  background: rgba(255, 255, 255, 0.2);
  margin: 20rpx 0;
  align-self: center;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
}

/* 设置容器宽度控制 */
.setting-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 0 30rpx 0;
  gap: 30rpx;
  width: 92%;
  max-width: 650rpx;
  height: auto;
  box-sizing: border-box;
  -webkit-overflow-scrolling: touch;
}

/* 设置区块 */
.setting-section {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 20rpx 30rpx;
  gap: 20rpx;
  width: 100%;
  background: rgba(50, 55, 65, 0.6);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-sizing: border-box;
}

.section-title {
  width: auto;
  height: 60rpx;
  font-family: 'Source Han Sans CN';
  font-style: normal;
  font-weight: 700;
  font-size: 34rpx;
  line-height: 60rpx;
  display: flex;
  align-items: center;
  color: rgba(255, 255, 255, 0.95);
  margin-bottom: 15rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  padding-left: 10rpx;
}

.setting-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0;
  gap: 20rpx;
  width: 100%;
  height: 62rpx;
  transition: all 0.2s ease;
}

/* 确保开关组件右对齐 */
.setting-section .custom-button-class {
  width: 100%;
}

.item-label {
  flex: 1;
  font-family: 'Source Han Sans CN';
  font-style: normal;
  font-weight: 400;
  font-size: 30rpx;
  line-height: 44rpx;
  display: flex;
  align-items: center;
  color: rgba(255, 255, 255, 0.85);
  padding-left: 10rpx;
}





/* 联系我们区域调整 */
.contact-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  gap: 30rpx;
  padding: 10rpx;
}

.contact-item {
  flex: 1;
}

/* 自定义联系按钮样式 */
.contact-button {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 70rpx;
  background: rgba(41, 55, 79, 0.6);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  color: rgba(255, 255, 255, 0.9);
  font-size: 28rpx;
  text-align: center;
  backdrop-filter: blur(5px);
  -webkit-backdrop-filter: blur(5px);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  transition: all 0.2s ease;
}

.contact-button:active {
  transform: scale(0.95);
  background: rgba(31, 42, 61, 0.8);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 关于我们 */
.about-section {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  width: 100%;
  height: auto;
  background: rgba(50, 55, 65, 0.6);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.1);
  margin-top: 10rpx;
  box-sizing: border-box;
}

.studio-logo {
  width: 240rpx; /* 减小logo宽度 */
  height: 120rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.2));
}

.developed {
  flex: 1;
  min-width: 320rpx; /* 确保版权信息有足够空间 */
  font-family: 'Source Han Sans CN';
  font-style: normal;
  font-weight: 100;
  font-size: 24rpx;
  line-height: 34rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: right;
  padding-left: 20rpx;
}
