/* components/setting-card/setting.wxss */

/* 蒙层背景 */
.setting-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.setting-mask.show {
  opacity: 1;
  visibility: visible;
}

.setting-panel {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32px 15px;
  position: fixed;
  width: 100%;
  /* 使用100vh确保从底部完整画出，遮盖tabbar */
  height: 90vh;
  left: 0;
  bottom: 0;
  background: #959DAE;
  border-radius: 40rpx 40rpx 0 0;
  transform: translateY(100%);
  transition: all 0.3s ease-out;
  z-index: 1000;
  box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.2);
  box-sizing: border-box;
  overflow-x: hidden; /* 确保横向不可滚动 */
}

.setting-panel.show {
  transform: translateY(0);
}

.setting-panel.hide {
  transform: translateY(100%);
}

/* 添加关闭指示器 */
.close-bar {
  width: 100%;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
}

.close-indicator {
  width: 80rpx;
  height: 8rpx;
  background: #FFFFFF;
  opacity: 0.7;
  border-radius: 4rpx;
  transition: all 0.2s ease;
}

.close-bar:active .close-indicator {
  width: 100rpx;
  opacity: 1;
}

/* 拖拽过程中的样式 */
.dragging .close-indicator {
  animation: pulse 1.5s infinite;
}

/* 设置容器宽度控制 */
.setting-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0;
  gap: 10rpx;
  width: 92%;
  max-width: 650rpx; /* 控制最大宽度，避免在大屏设备上过宽 */
  max-height: calc(100% - 60rpx);
  overflow-y: auto;
  overflow-x: hidden; /* 确保横向不可滚动 */
  box-sizing: border-box; /* 确保padding不会导致宽度溢出 */
}

/* 设置区块 */
.setting-section {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 0;
  gap: 36rpx;
  width: 100%;
}

.section-title {
  width: 136rpx;
  height: 80rpx;
  font-family: 'Source Han Sans CN';
  font-style: normal;
  font-weight: 700;
  font-size: 34rpx;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  color: #061429;
}

.setting-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0;
  gap: 20rpx;
  width: 100%;
  height: 62rpx;
}

/* 确保开关组件右对齐 */
.setting-section .custom-button-class {
  width: 100%;
}

.item-label {
  flex: 1;
  font-family: 'Source Han Sans CN';
  font-style: normal;
  font-weight: 500;
  font-size: 30rpx;
  line-height: 44rpx;
  display: flex;
  align-items: center;
  color: #2A2D32;
  opacity: 0.8;
}

/* 字体大小设置 - 布局保留，但样式已移至按钮组件 */
.font-size-setting {
  flex-direction: column;
  align-items: flex-start;
  gap: 20rpx;
  height: 134rpx;
}

.font-size-label {
  width: 100%;
  font-family: 'Source Han Sans CN';
  font-style: normal;
  font-weight: 500;
  font-size: 30rpx;
  line-height: 44rpx;
  display: flex;
  align-items: center;
  letter-spacing: -0.6rpx;
  color: #2A2D32;
  opacity: 0.8;
}

.font-size-options {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0;
  width: 100%;
  height: 48rpx;
}

/* 字体大小选项样式 */
.font-size-option {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0;
  gap: 10rpx;
  width: auto;
  height: 48rpx;
  cursor: pointer;
}

.font-size-option .radio {
  box-sizing: border-box;
  width: 48rpx;
  height: 48rpx;
  background: #F4F4F4;
  mix-blend-mode: normal;
  border: 3rpx solid #CACACA;
  border-radius: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: background-color 0.3s ease;
}

.font-size-option .radio.active {
  background: #5CE821;
  border: none;
}

.font-size-option .radio-inner {
  width: 24rpx;
  height: 24rpx;
  background: #FFFFFF;
  border-radius: 50%;
}

.font-size-option .option-label {
  width: auto;
  min-width: 28rpx;
  height: 40rpx;
  font-family: 'Source Han Sans CN';
  font-style: normal;
  font-weight: 400;
  font-size: 28rpx;
  line-height: 40rpx;
  display: flex;
  align-items: center;
  letter-spacing: -0.6rpx;
  color: #2A2D32;
  opacity: 0.6;
}

.font-size-option.active .option-label {
  opacity: 1;
  font-weight: 500;
}

/* 联系我们区域调整 */
.contact-section {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 0;
  gap: 20rpx;
  width: 100%;
  height: auto;
}

.contact-buttons {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0;
  gap: 20rpx;
  width: 100%;
  height: 88rpx;
}

/* 调整按钮样式，确保不重叠 */
.contact-button-class {
  margin: 0;
  flex: 1;
  max-width: calc(50% - 10rpx); /* 50%减去间距的一半 */
  box-sizing: border-box;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/* 关于我们 */
.about-section {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0;
  gap: 20rpx;
  width: 100%;
  height: auto;
  flex-wrap: wrap; /* 允许在必要时换行 */
}

.studio-logo {
  width: 200rpx; /* 稍微减小logo宽度 */
  height: 90rpx;
  background-image: url('https://img.picui.cn/free/2025/04/02/67ecce36c9b6c.png');
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

.copyright {
  flex: 1;
  min-width: 300rpx; /* 确保版权信息有足够空间 */
  font-family: 'Source Han Sans CN';
  font-style: normal;
  font-weight: 400;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #000000;
  opacity: 0.6;
}
