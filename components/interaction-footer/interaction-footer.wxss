/* components/interaction-footer/interaction-footer.wxss */
@import "../../styles/theme.wxss";
@import "../../static/css/icon.wxss";

/* 底部控件容器样式 */
.bottom-controls-container {
  position: fixed;
  bottom: calc(140rpx + env(safe-area-inset-bottom)); /* 调整位置，确保在开始喝汤按钮上方有足够间距 */
  left: 0;
  right: 0;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 100; /* 提高z-index确保显示在其他元素上方 */
  padding: 0;
  box-sizing: border-box;
  overflow: hidden; /* 防止内容溢出 */
}

/* 喝汤状态下强制隐藏底部控件容器 */
.bottom-controls-container.drinking-hidden {
  display: none !important;
}

/* 图标容器样式 */
.icons-container {
  display: flex;
  flex-direction: row;
  justify-content: center; /* 居中对齐 */
  align-items: center;
  opacity: 1; /* 确保容器本身不影响子元素的透明度 */
  margin: 0 auto;
  padding: 10rpx 0;
  width: 100%;
  box-sizing: border-box;
}

/* 胶囊形容器样式 */
.capsule-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between; /* 两端对齐 */
  background: transparent; /* 透明背景 */
  border-radius: 100rpx; /* 胶囊形状 */
  padding: 6rpx 8rpx;
  border: 1px solid rgba(255, 255, 255, 0.25); /* 更明显的描边 */
  overflow: hidden; /* 确保内容不溢出圆角 */
  height: 60rpx; /* 固定高度 */
  width: 40%; /* 与start-soup-button等宽 */
  box-sizing: border-box;
}

/* 图标项样式 */
.icon-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center; /* 内容居中 */
  padding: 0;
  transition: all 0.3s ease;
  position: relative;
  flex: 1; /* 平均分配空间 */
  height: 100%;
}

/* 收藏图标项样式 */
.favorite-item {
  border-right: 1px solid rgba(255, 255, 255, 0.15);
  padding-right: 10rpx; /* 右侧内边距 */
}

/* 点赞图标项样式 */
.like-item {
  padding-left: 10rpx; /* 左侧内边距 */
}

/* 点赞图标激活样式 */
.like-item:active {
  transform: scale(1.1);
}

/* 图标样式已移至 icon.wxss */

/* 计数文本通用样式 */
.count-text {
  font-size: 24rpx;
  font-weight: normal;
  color: rgba(255, 255, 255, 0.9); /* 更亮的文本颜色 */
  white-space: nowrap;
  letter-spacing: 0.5rpx;
  text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.3); /* 添加文本阴影增强可见度 */
}

/* 隐藏的收藏图标 */
.favorite-item.hidden {
  opacity: 0.6; /* 半透明而不是完全隐藏 */
}

/* 点赞图标激活样式 */
.like-item.active {
  transform: scale(1.05);
}

/* 收藏图标激活样式 */
.favorite-item.active {
  transform: scale(1.05);
}

/* 图标颜色样式已移至 icon.wxss */

/* 创作者感谢文字样式 */
.creator-credit {
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0.8;
  transition: all 0.3s ease;
  margin-bottom: 15rpx; /* 改为底部间距，因为现在在上面 */
  width: 100%;
  text-align: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}

/* 创作者文本样式 */
.creator-text {
  font-size: 24rpx;
  color: var(--color-text-hint);
  font-weight: 300;
  letter-spacing: 1rpx;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.5);
  white-space: nowrap; /* 防止文本换行 */
  overflow: hidden;
  text-overflow: ellipsis; /* 文本溢出时显示省略号 */
  max-width: 100%;
  background: rgba(0, 0, 0, 0.2);
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  /* 使用微信小程序支持的方式实现模糊效果 */
  background-color: rgba(0, 0, 0, 0.3);
}
