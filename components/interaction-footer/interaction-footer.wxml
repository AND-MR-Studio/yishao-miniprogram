<!--components/interaction-footer/interaction-footer.wxml-->
<!-- 底部控件容器 - 包含图标和创作者信息 -->
<view class="bottom-controls-container {{isPeeking ? 'peek-hidden' : ''}} {{isDrinking ? 'drinking-hidden' : ''}}">
  <!-- 图标容器 - 在偷看模式或喝汤状态下隐藏 -->
  <view class="icons-container" wx:if="{{!isPeeking && !isDrinking}}">
    <!-- 收藏图标 -->
    <view class="icon-wrapper favorite-icon {{isFavorite ? 'active' : 'hidden'}}" bindtap="handleFavoriteClick">
      <text class="heart-text">⭐</text>
      <text class="count-text favorite-count" wx:if="{{favoriteCount > 0}}">{{favoriteCount}}</text>
    </view>

    <!-- 点赞图标 - 仅显示，不可点击 -->
    <view class="icon-wrapper like-icon read-only">
      <text class="heart-text">💜</text>
      <text class="count-text like-count" wx:if="{{likeCount > 0}}">{{likeCount}}</text>
    </view>
  </view>

  <!-- 创作者感谢文字 - 在偷看模式下隐藏 -->
  <view class="creator-credit" wx:if="{{!isPeeking && creatorId}}">
    <text class="creator-text">感谢创作者：{{creatorId}}</text>
  </view>
</view>
