/* components/soup-list-modal/soup-list-modal.wxss */
.modal-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, visibility 0.3s ease;
}

.modal-container.visible {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 85%;
  max-width: 600rpx;
  max-height: 80vh;
  background-color: rgba(20, 20, 40, 0.95);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.5);
  border: 1px solid rgba(255, 255, 255, 0.1);
  transform: scale(0.9);
  transition: transform 0.3s ease;
}

.modal-container.visible .modal-content {
  transform: scale(1);
}

.modal-header {
  padding: 30rpx;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: bold;
  text-shadow: 0 0 10rpx rgba(87, 44, 239, 0.5);
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: rgba(255, 255, 255, 0.7);
  font-size: 40rpx;
  cursor: pointer;
  border-radius: 50%;
}

.modal-close:active {
  background-color: rgba(92, 232, 33, 0.1);
}

.modal-body {
  flex: 1;
  overflow: hidden;
  position: relative;
  min-height: 400rpx;
}

.loading-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.1);
  border-top: 4rpx solid rgba(87, 44, 239, 0.9);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

.empty-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  margin-bottom: 20rpx;
  position: relative;
}

.empty-icon::before,
.empty-icon::after {
  content: '';
  position: absolute;
  background-color: rgba(255, 255, 255, 0.5);
}

.empty-icon::before {
  width: 60rpx;
  height: 4rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.empty-icon::after {
  width: 4rpx;
  height: 60rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.empty-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
}

.soup-list-scroll {
  height: 100%;
  max-height: 60vh;
}

.soup-list {
  padding: 20rpx;
}

.soup-item {
  background-color: rgba(255, 255, 255, 0.05);
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 1px solid rgba(255, 255, 255, 0.08);
  transition: all 0.3s ease;
}

.soup-item:active {
  background-color: rgba(92, 232, 33, 0.1);
}

.soup-item-content {
  flex: 1;
  overflow: hidden;
}

.soup-title {
  font-size: 30rpx;
  color: #FFFFFF;
  margin-bottom: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.soup-meta {
  display: flex;
  align-items: center;
}

.soup-type {
  font-size: 24rpx;
  color: rgba(92, 232, 33, 0.9);
  background-color: rgba(92, 232, 33, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-right: 15rpx;
}

.soup-views {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}

.soup-item-arrow {
  width: 30rpx;
  height: 30rpx;
  border-top: 2px solid rgba(255, 255, 255, 0.3);
  border-right: 2px solid rgba(255, 255, 255, 0.3);
  transform: rotate(45deg);
  margin-left: 10rpx;
}
