/* 对话组件容器 */
@import "../../styles/theme.wxss";
.dialog-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none; /* 默认不捕获点击事件 */
  display: none; /* 默认不显示 */
  background-color: transparent;
}

.dialog-container.visible {
  opacity: 1;
  pointer-events: auto; /* 可见时捕获点击事件 */
  display: flex; /* 可见时显示为flex布局 */
  flex-direction: column;
}

/* 导航栏容器 */
.nav-bar-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1001;
}

/* 毛玻璃效果背景 */
.frosted-glass {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(4, 0, 8, 0.21);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  z-index: 100;
  pointer-events: none; /* 确保不会影响底层组件的交互 */
  transition: backdrop-filter 0.6s var(--transition-decelerated),
              -webkit-backdrop-filter 0.6s var(--transition-decelerated),
              background-color 0.6s var(--transition-decelerated),
              opacity 0.6s var(--transition-decelerated);
}

/* 偷看模式样式 */
.peek-mode .frosted-glass {
  backdrop-filter: blur(0);
  -webkit-backdrop-filter: blur(0);
  background-color: transparent;
  opacity: 0;
}

.dialog-container.peek-mode {
  background-color: transparent;
  transition: background-color 0.6s var(--transition-decelerated);
}

/* 对话区域样式 */
.dialog-content {
  box-sizing: border-box;
  padding-top: 460rpx; /* 顶部留出导航栏空间(180rpx)和tip模块空间(180rpx) */
  padding-bottom: calc(250rpx + env(safe-area-inset-bottom)); /* 底部留出足够空间给input-bar(~120rpx)和tabbar(~110rpx)以及安全区域 */
  width: 100%;
  height: 100vh; /* 使用视口高度 */
  position: relative;
  z-index: 200; /* 确保在毛玻璃效果之上 */
}

/* 偷看功能样式 - 对话内容先模糊后透明，添加平滑过渡 */
.dialog-content {
  transition: opacity 0.6s var(--transition-decelerated),
              filter 0.6s var(--transition-decelerated);
}

.peek-mode .dialog-content {
  opacity: 0;
  filter: blur(5px);
}

/* 基础消息样式  */
.message {
  margin: 0 auto 30rpx auto;
  width: 90%;
  padding: 0rpx 40rpx;
  box-sizing: border-box;
  white-space: pre-wrap;
  word-break: break-all;
  text-align: left;
  display: block;
  font-family: var(--font-family-mincho);
  font-size: 28rpx; /* 符合小程序设计规范 - 摘要/小按钮文字 */
  line-height: var(--line-height-md);
}

/* 回复消息样式  */
.response {
  font-family: var(--font-family-mincho);
  font-size: 28rpx; /* 符合小程序设计规范 - 摘要/小按钮文字 */
  line-height: var(--line-height-md);
  color: var(--color-accent);
}

/* 用户消息样式  */
.user {
  font-family: var(--font-family-mincho);
  font-size: 28rpx; /* 符合小程序设计规范 - 摘要/小按钮文字 */
  line-height: var(--line-height-md);
  color: var(--color-text-primary);
}

/* 加载消息样式已移至tip-module组件 */

/* 简化版打字机样式  */
.typing-simple {
  /* 确保打字机效果与普通消息有完全相同的样式 */
  position: relative;
  /* 不使用inherit，而是明确设置与.message相同的值 */
  width: 90%;
  margin: 0 auto 30rpx auto;
  padding: 0rpx 40rpx;
  box-sizing: border-box;
  white-space: pre-wrap;
  word-break: break-all;
  text-align: left;
  font-family: var(--font-family-mincho);
  font-size: 28rpx; /* 符合小程序设计规范 - 摘要/小按钮文字 */
  line-height: var(--line-height-md);
  color: var(--color-accent);
}

/* 添加打字机光标效果 */
.typing-simple::after {
  content: '|';
  display: inline-block;
  color: var(--cursor-color);
  animation: cursor-blink 0.8s infinite;
  position: relative;
  margin-left: 2rpx;
}

@keyframes cursor-blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0; }
}

/* 对话组件内部的输入栏样式 */
.input-bar-wrapper {
  position: fixed;
  /* 不需要设置bottom，因为input-bar组件已经设置了正确的位置 */
  left: 0;
  width: 100%;
  z-index: 1002;
}

/* 消息状态样式 - 错误提示已移至tip-module组件 */
.message.sending {
  opacity: 0.7;
}

.message.typing {
  opacity: 0.8;
}
