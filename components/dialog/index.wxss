/* 对话组件容器 */
.dialog-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none; /* 默认不捕获点击事件 */
  display: none; /* 默认不显示 */
  background-color: hsla(258, 100.00%, 25.50%, 0.03); /* 背景改为半透明 */
  --dialog-opacity: 1; /* CSS变量控制透明度 */
}

.dialog-container.visible {
  opacity: 1;
  pointer-events: auto; /* 可见时捕获点击事件 */
  display: flex; /* 可见时显示为flex布局 */
  flex-direction: column;
}

/* 对话包装器 */
.dialog-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
  padding-top: 180rpx; /* 调整顶部padding以适应导航栏 */
  padding-bottom: 150rpx;
}

