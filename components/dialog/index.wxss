/* 导航栏容器 */
.nav-bar-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1001;
}

/* 毛玻璃效果遮罩层 */
.frosted-glass {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(4, 0, 8, 0.21);
  backdrop-filter: blur(20rpx);
  z-index: 100;
  pointer-events: none; /* 确保不会影响底层组件的交互 */
  opacity: var(--dialog-opacity);
  transition: opacity 0.3s ease, backdrop-filter 0.3s ease;
}

/* 偷看功能样式 */
.peek-mode .frosted-glass {
  backdrop-filter: blur(0);
  -webkit-backdrop-filter: blur(0);
  background-color: transparent;
  opacity: 0;
  transition: backdrop-filter 0.2s ease, -webkit-backdrop-filter 0.2s ease, opacity 0.3s ease;
}

/* 偷看模式下的对话容器 */
.dialog-container.peek-mode {
  background-color: transparent;
}

/* 对话区域样式 */
.dialog-content {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 40rpx 0rpx;
  gap: 10rpx;
  width: 190%;
  flex: 1;
  position: relative;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  border-radius: 20rpx;
  opacity: var(--dialog-opacity);
  transition: opacity 0.3s ease;
  z-index: 200; /* 确保在毛玻璃效果之上 */
}

/* 偷看功能样式 - 对话内容先模糊后透明 */
.peek-mode .dialog-content {
  opacity: 0;
  filter: blur(5px);
  transition: filter 0.15s ease, opacity 0.25s ease 0.1s;
}

/* 基础消息样式 */
.message {
  margin-bottom: 10rpx;
  width: 85%;
  padding: 0 40rpx;
  box-sizing: border-box;
  white-space: pre-wrap;
  word-break: break-all;
  text-align: left;
  display: block;
}

/* 回复消息样式（红色） */
.response {
  color: var(--color-primary);
  position: relative;
}

/* 用户消息样式（白色） */
.user {
  color: var(--color-text-primary);
}

/* 加载消息样式 */
.loading {
  color: var(--color-text-secondary);
  opacity: 0.8;
  animation: pulse 1.5s infinite ease-in-out;
}

@keyframes pulse {
  0% { opacity: 0.5; }
  50% { opacity: 0.9; }
  100% { opacity: 0.5; }
}

/* 打字机容器样式 */
.typing-container {
  display: block;
  text-align: left;
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}

/* 前缀文本样式 */
.prefix-text {
  display: inline;
}

/* 打字机内容区域 */
.typing-content {
  display: inline;
  word-break: break-all;
  white-space: pre-wrap;
}

/* 打字机字符基础样式 */
.char-typing {
  display: inline-block;
  opacity: 0;
  transform: scale(0.9);
  transition: all 160ms cubic-bezier(0.215, 0.610, 0.355, 1.000);
  position: relative;
}

/* 显示状态 */
.char-typing.show {
  opacity: 1;
  transform: scale(1);
}

/* 活跃状态 */
.char-typing.active {
  opacity: 1;
}

/* 普通打字机效果 */
.char-typing.active.effect-normal {
  transform: scale(1);
}

/* 活跃状态 - 系统消息打字机 */
.response-char-typing-active {
  color: var(--color-accent);
}

/* 前一个字符状态 */
.char-typing.prev {
  opacity: 0.9;
  transform: scale(1);
  transition: all 200ms cubic-bezier(0.215, 0.610, 0.355, 1.000);
}

/* 对话组件内部的输入栏样式 */
.input-bar-wrapper {
  position: fixed;
  bottom: calc(env(safe-area-inset-bottom));
  left: 0;
  width: 100%;
  z-index: 1002;
}

/* 消息状态样式 */
.message.sending {
  opacity: 0.7;
}

.message.error {
  position: relative;
}

.message.error::after {
  content: '发送失败';
  position: absolute;
  right: 40rpx;
  bottom: -30rpx;
  font-size: 24rpx;
  color: var(--color-accent);
}

.message.typing {
  opacity: 0.8;
}
