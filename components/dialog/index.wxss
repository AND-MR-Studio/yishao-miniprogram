/* 对话组件容器 */
.dialog-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none; /* 默认不捕获点击事件 */
  display: none; /* 默认不显示 */
  background-color: transparent;
}

.dialog-container.visible {
  opacity: 1;
  pointer-events: auto; /* 可见时捕获点击事件 */
  display: flex; /* 可见时显示为flex布局 */
  flex-direction: column;
}

/* 导航栏容器 */
.nav-bar-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1001;
}

/* 毛玻璃效果背景 */
.frosted-glass {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(4, 0, 8, 0.21);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  z-index: 100;
  pointer-events: none; /* 确保不会影响底层组件的交互 */
  transition: backdrop-filter 0.6s var(--transition-decelerated),
              -webkit-backdrop-filter 0.6s var(--transition-decelerated),
              background-color 0.6s var(--transition-decelerated),
              opacity 0.6s var(--transition-decelerated);
}

/* 偷看模式样式 */
.peek-mode .frosted-glass {
  backdrop-filter: blur(0);
  -webkit-backdrop-filter: blur(0);
  background-color: transparent;
  opacity: 0;
}

.dialog-container.peek-mode {
  background-color: transparent;
  transition: background-color 0.6s var(--transition-decelerated);
}

/* 对话区域样式 */
.dialog-content {
  box-sizing: border-box;
  padding-top: 180rpx; /* 顶部留出导航栏空间 */
  padding-bottom: calc(250rpx + env(safe-area-inset-bottom)); /* 底部留出足够空间给input-bar(~120rpx)和tabbar(~110rpx)以及安全区域 */
  width: 100%;
  height: 100vh; /* 使用视口高度 */
  position: relative;
  z-index: 200; /* 确保在毛玻璃效果之上 */
}

/* 偷看功能样式 - 对话内容先模糊后透明，添加平滑过渡 */
.dialog-content {
  transition: opacity 0.6s var(--transition-decelerated),
              filter 0.6s var(--transition-decelerated);
}

.peek-mode .dialog-content {
  opacity: 0;
  filter: blur(5px);
}

/* 基础消息样式 */
.message {
  margin: 0 auto 30rpx auto;
  width: 90%;
  padding: 0rpx 40rpx;
  box-sizing: border-box;
  white-space: pre-wrap;
  word-break: break-all;
  text-align: left;
  display: block;
}

/* 回复消息样式 */
.response {
  color: var(--color-primary);
}

/* 用户消息样式 */
.user {
  color: var(--color-text-primary);
}

/* 加载消息样式 */
.loading {
  color: var(--color-text-secondary);
  opacity: 0.8;
  animation: pulse 1.5s infinite ease-in-out;
}

@keyframes pulse {
  0% { opacity: 0.5; }
  50% { opacity: 0.9; }
  100% { opacity: 0.5; }
}

/* 简化版打字机样式 */
.typing-simple {
  /* 只保留打字机特有的样式，其他样式继承自 .message 类 */
  position: relative;
  /* 确保不会覆盖 .message 类的宽度和边距设置 */
  width: inherit;
  margin: inherit;
  padding: inherit;
}

/* 添加打字机光标效果 */
.typing-simple::after {
  content: '|';
  display: inline-block;
  color: var(--color-accent);
  animation: cursor-blink 0.8s infinite;
  position: relative;
  margin-left: 2rpx;
}

@keyframes cursor-blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0; }
}

/* 对话组件内部的输入栏样式 */
.input-bar-wrapper {
  position: fixed;
  /* 不需要设置bottom，因为input-bar组件已经设置了正确的位置 */
  left: 0;
  width: 100%;
  z-index: 1002;
}

/* 消息状态样式 */
.message.sending {
  opacity: 0.7;
}

.message.error {
  position: relative;
}

.message.error::after {
  content: '发送失败';
  position: absolute;
  right: 40rpx;
  bottom: -30rpx;
  font-size: 24rpx;
  color: var(--color-accent);
}

.message.typing {
  opacity: 0.8;
}
