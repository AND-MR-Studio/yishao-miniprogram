/* 对话组件容器 */
@import "../../styles/theme.wxss";
.dialog-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  opacity: 1;
  display: flex;
  flex-direction: column;
  background-color: transparent;
  transition: opacity 0.6s var(--transition-decelerated);
}

/* 导航栏容器 */
.nav-bar-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1001;
}

/* 毛玻璃效果背景 */
.frosted-glass {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(4, 0, 8, 0.21);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  z-index: 100;
  pointer-events: none; /* 确保不会影响底层组件的交互 */
  transition: backdrop-filter 0.6s var(--transition-decelerated),
              -webkit-backdrop-filter 0.6s var(--transition-decelerated),
              background-color 0.6s var(--transition-decelerated),
              opacity 0.6s var(--transition-decelerated);
}

/* 偷看模式样式 */
.peek-mode .frosted-glass {
  backdrop-filter: blur(0);
  -webkit-backdrop-filter: blur(0);
  background-color: transparent;
  opacity: 0;
}

.dialog-container.peek-mode {
  background-color: transparent;
  transition: background-color 0.6s var(--transition-decelerated);
}

/* 对话区域样式 */
.dialog-content {
  box-sizing: border-box;
  padding-top: 460rpx; /* 顶部留出导航栏空间(180rpx)和tip模块空间(180rpx) */
  padding-bottom: 30rpx; /* 底部只留出基本间距，input-bar现在在页面中 */
  width: 100%;
  height: 100vh; /* 使用视口高度 */
  position: relative;
  z-index: 200; /* 确保在毛玻璃效果之上 */
  transition: opacity 0.6s var(--transition-decelerated),
              filter 0.6s var(--transition-decelerated);
}

/* 偷看功能样式 - 对话内容先模糊后透明，添加平滑过渡 */
.peek-mode .dialog-content {
  opacity: 0;
  filter: blur(5px);
}

/* 消息包装器 - 通用样式 */
.message-wrapper {
  margin: 0 auto 30rpx auto;
  width: 90%;
  display: flex;
  position: relative;
}

/* 消息内容容器 */
.message-content {
  padding: 0;
  border-radius: 0;
  max-width: 100%;
  box-sizing: border-box;
  position: relative;
}

/* 消息文本 */
.message-text {
  white-space: pre-wrap;
  word-break: break-all;
  font-family: var(--font-family-mincho);
  font-size: 28rpx;
  line-height: var(--line-height-md);
}

/* 消息包装器 - 用户消息 */
.user-message {
  justify-content: flex-end;
}

.user-message .message-content {
  background: transparent;
  color: var(--color-text-primary);
}

/* 消息包装器 - AI消息 */
.agent-message {
  justify-content: flex-start;
}

.agent-message .message-content {
  background: transparent;
  color: var(--color-text-primary);
}

/* 打字机动画效果 */
.message-text.typing {
  position: relative;
}

.message-text.typing::after {
  content: '';
  display: inline-block;
  width: 2rpx;
  height: 1.2em;
  background-color: currentColor;
  margin-left: 4rpx;
  animation: blink 1s infinite;
  vertical-align: text-bottom;
}

@keyframes blink {
  0%, 50% { opacity: 1; }
  51%, 100% { opacity: 0; }
}

/* 消息状态样式 */
.message-wrapper.sending .message-content {
  opacity: 0.7;
}
