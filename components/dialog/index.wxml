<!--components/dialog/index.wxml-->
<view class="dialog-container {{isPeeking ? 'peek-mode' : ''}}">
  <!-- 导航栏 -->
  <view class="nav-bar-container" catchtap="handleClose">
    <nav-bar showBackButton="{{true}}" bind:back="handleClose" />
  </view>

  <!-- 毛玻璃效果背景 -->
  <view class="frosted-glass"></view>

  <!-- 对话区域 -->
  <scroll-view
    class="dialog-content"
    scroll-y="true"
    scroll-with-animation="true"
    scroll-anchoring="true"
    enhanced="true"
    bounces="true"
    show-scrollbar="false"
    enable-passive="true"
    id="dialogScroll"
    scroll-into-view="{{scrollToView}}"
  >    <!-- 统一消息列表 -->
    <block wx:for="{{messages}}" wx:key="index" wx:for-item="message" wx:for-index="idx">
      <!-- 用户消息 -->
      <view wx:if="{{message.role === 'user'}}" class="message-wrapper user-message" id="msg-{{idx}}">
        <view class="message-content">
          <view class="message-text">{{message.content}}</view>
        </view>
      </view>
      
      <!-- AI助手消息 -->
      <view wx:elif="{{message.role === 'assistant'}}" class="message-wrapper agent-message" id="msg-{{idx}}">
        <view class="message-content">
          <view class="message-text {{chatState === 'loading' && idx === messages.length - 1 ? 'typing' : ''}}">
            <!-- 根据状态显示内容 -->
            <text wx:if="{{chatState === 'loading' && idx === messages.length - 1}}">{{typingText}}</text>
            <text wx:else>{{message.content}}</text>
          </view>
        </view>
      </view>
    </block>

    <!-- 滚动锚点 -->
    <view id="scrollBottom" style="height: 10rpx;"></view>
  </scroll-view>
</view>
