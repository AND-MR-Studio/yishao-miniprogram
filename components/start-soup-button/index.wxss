/* components/start-soup-button/index.wxss */
@import "../../styles/theme.wxss";

/* 呼吸动画 */
@keyframes breathing {
  0% {
    transform: scale(1);
    box-shadow: 0rpx 10rpx 20rpx rgba(4, 244, 77, 0.2);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0rpx 12rpx 24rpx rgba(4, 244, 77, 0.25);
  }
  100% {
    transform: scale(1);
    box-shadow: 0rpx 10rpx 20rpx rgba(4, 244, 77, 0.2);
  }
}

/* 按钮容器 */
.start-soup-button-container {
  display: flex;
  justify-content: center;
  width: 100%;
}

.btn-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 120rpx;
  overflow: visible;
}

/* 点亮按钮 */
.btn-light {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 13rpx 0rpx;
  gap: 10rpx;
  width: 50%;
  min-width: 300rpx;
  height: 80rpx;
  background: var(--color-accent, #5ce821);
  box-shadow: 0rpx 10rpx 20rpx rgba(4, 244, 77, 0.2);
  border-radius: 100rpx;
  transition: all 0.3s ease;
  /* 应用呼吸动画 */
  animation: breathing 4s ease-in-out infinite;
}

/* 按下状态的按钮样式 - 圆形 */
.btn-light.pressed, .btn-light.expand-animation {
  width: 120rpx !important;
  height: 120rpx !important;
  min-width: 120rpx !important;
  min-height: 120rpx !important;
  max-width: 120rpx !important;
  max-height: 120rpx !important;
  padding: 0 !important;
  margin: 0 auto !important;
  border-radius: 50% !important;
  background-color: var(--color-accent, #5ce821);
  box-shadow: 0rpx 10rpx 25rpx rgba(4, 244, 77, 0.3) !important;
  z-index: 1000 !important;
  transition: all 0.2s cubic-bezier(0.34, 1.56, 0.64, 1) !important; /* 弹性过渡效果 */
  display: flex !important;
  justify-content: center !important;
  align-items: center !important;
  overflow: hidden !important;
  box-sizing: border-box !important;
  transform-origin: center center !important;
  /* 停止呼吸动画 */
  animation: none !important;
}

/* 点亮按钮文本  */
.btn-text-light {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #000000;
  font-size: 28rpx; /* 符合小程序设计规范 - 摘要/小按钮文字 */
  font-weight: var(--font-weight-medium);
  font-family: var(--font-family-mincho);
}

/* 加载中动画样式 */
.loading-dots {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  width: 100%;
}

.loading-dots .dot {
  font-size: 36rpx;
  font-weight: bold;
  color: #000000;
  opacity: 0;
  animation: dot-animation 1.4s infinite;
  margin: 0 -4rpx;
}

.loading-dots .dot:nth-child(1) {
  animation-delay: 0s;
}

.loading-dots .dot:nth-child(2) {
  animation-delay: 0.2s;
}

.loading-dots .dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes dot-animation {
  0% {
    opacity: 0;
  }
  20% {
    opacity: 0;
  }
  50% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}
