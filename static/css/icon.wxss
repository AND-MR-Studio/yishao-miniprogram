/* Custom icons using base64 encoding or PNG images */

/**
 * 点赞和收藏图标
 * 统一管理应用中使用的点赞和收藏图标
 */
@font-face {
  font-family: "iconfont"; /* Project id 4912050 */
  src:
       url('data:application/x-font-woff2;charset=utf-8;base64,') format('woff2'),
       url('//at.alicdn.com/t/c/font_4912050_gzy73jhcu5s.woff?t=1746329986894') format('woff'),
       url('//at.alicdn.com/t/c/font_4912050_gzy73jhcu5s.ttf?t=1746329986894') format('truetype');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* 首页图标 */
.icon-home:before {
  content: "\e605";
}

/* 设置图标 */
.icon-setting:before {
  content: "\e600";
}

/* 点赞图标 - 已点赞状态 */
.icon-liked:before {
  content: "\e8c4";
}

/* 点赞图标 - 未点赞状态 */
.icon-unliked:before {
  content: "\e8c5";
}

/* 收藏图标 - 已收藏状态 */
.icon-favorited:before {
  content: "\e8c2";
}

/* 收藏图标 - 未收藏状态 */
.icon-unfavorited:before {
  content: "\e8c3";
}

/* Navbar icons */
.icon-home-green {
  width: 32rpx;
  height: 32rpx;
  display: inline-block;
  color: var(--color-accent, #5ce821);
  font-family: "iconfont" !important;
  font-size: 36rpx;
  line-height: 32rpx;
  text-align: center;
}

.icon-home-green:before {
  content: "\e605"; /* 使用 icon-home 的内容 */
}

.icon-more-green {
  width: 36rpx;
  height: 36rpx;
  display: inline-block;
  color: var(--color-accent, #5ce821);
  font-family: "iconfont" !important;
  font-size: 36rpx;
  line-height: 36rpx;
  text-align: center;
}

.icon-more-green:before {
  content: "\e600"; /* 使用 icon-setting 的内容 */
}

/* Input bar icons */
.icon-voice {
  width: 32rpx;
  height: 32rpx;
  background-image: url("/static/images/voice.png");
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
  display: inline-block;
}

.icon-question {
  width: 36rpx;
  height: 36rpx;
  background-image: url("/static/images/question.png");
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
  display: inline-block;
}

/* Mine page icons */
.icon-about {
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  position: relative;
  border: 2rpx solid #5ce821;
  border-radius: 50%;
  color: #5ce821;
  text-align: center;
  line-height: 40rpx;
}

.icon-about:before {
  content: "i";
  font-style: italic;
  font-weight: bold;
  font-size: 28rpx;
}

.icon-right {
  width: 16rpx;
  height: 16rpx;
  display: inline-block;
  border-top: 2rpx solid #5ce821;
  border-right: 2rpx solid #5ce821;
  transform: rotate(45deg);
}

/* 交互图标样式 */

/* 图标文本样式 */
.icon-text {
  font-size: 32rpx;
  line-height: 1;
  margin-right: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.3); /* 添加文本阴影增强可见度 */
}

/* 收藏图标文本样式 */
.favorite-item .icon-text {
  color: rgba(255, 255, 255, 1); /* 纯白色 */
}

/* 点赞图标文本样式 */
.like-item .icon-text {
  color: rgba(255, 255, 255, 1); /* 纯白色 */
}

/* 图标字体样式 - 覆盖默认大小 */
.iconfont {
  font-size: 32rpx;
}

/* 点赞图标激活样式 */
.like-item.active .icon-text {
  color: #8a2be2; /* 紫色 */
}

/* 收藏图标激活样式 */
.favorite-item.active .icon-text {
  color: #ffd700; /* 金色 */
}