/* Input bar icons */
.icon-voice {
  width: 32rpx;
  height: 32rpx;
  background-image: url("/static/images/voice.png");
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
  display: inline-block;
}

.icon-question {
  width: 36rpx;
  height: 36rpx;
  background-image: url("/static/images/question.png");
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
  display: inline-block;
