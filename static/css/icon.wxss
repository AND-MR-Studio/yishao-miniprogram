/* Mine page icons */
.icon-about {
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  position: relative;
  border: 2rpx solid #5ce821;
  border-radius: 50%;
  color: #5ce821;
  text-align: center;
  line-height: 40rpx;
}

.icon-about:before {
  content: "i";
  font-style: italic;
  font-weight: bold;
  font-size: 28rpx;
}

.icon-right {
  width: 16rpx;
  height: 16rpx;
  display: inline-block;
  border-top: 2rpx solid #5ce821;
  border-right: 2rpx solid #5ce821;
  transform: rotate(45deg);
}





