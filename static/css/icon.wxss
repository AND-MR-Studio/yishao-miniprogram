/* Custom icons using base64 encoding or PNG images */

/**
 * 点赞和收藏图标
 * 统一管理应用中使用的点赞和收藏图标
 */
@font-face {
  font-family: "iconfont"; /* Project id 4912050 */
  src:
       url('data:application/x-font-woff2;charset=utf-8;base64,') format('woff2'),
       url('//at.alicdn.com/t/c/font_4912050_bi3ztknljx.woff?t=1747719793717') format('woff'),
       url('//at.alicdn.com/t/c/font_4912050_bi3ztknljx.ttf?t=1747719793717') format('truetype');
}


.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* 首页图标 */
.icon-home:before {
  content: "\e605";
  color: var(--color-accent, #5ce821);
  font-size: 36rpx;
}

/* 设置图标 */
.icon-setting:before {
